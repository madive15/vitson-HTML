<!-- prettier-ignore -->
<%
/**
 * @file filter/index.ejs
 * @description 필터 분기 래퍼
 * @param {string} type - 필터 유형: 'product' | 'mypage'
 */
%>

<% const _src = srcPath; %>

<!-- prettier-ignore -->
<% if (type === 'product') { %>
  <%- include('./product.ejs', { items: typeof items !== 'undefined' ? items : [] }) %>
<% } else if (type === 'mypage') { %>
  <%- include('./mypage.ejs', { filterType: typeof filterType !== 'undefined' ? filterType : '' }) %>
<% } else if (type === 'survey') { %>
  <%- include('./survey.ejs', { filterType: typeof filterType !== 'undefined' ? filterType : '' }) %>
<% } else if (type === 'docs') { %>
  <%- include('./docs.ejs', { filterType: typeof filterType !== 'undefined' ? filterType : '' }) %>
<% } %>
