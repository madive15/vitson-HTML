<% const _src = srcPath; const _public = publicPath; %>
<!-- prettier-ignore -->
<%
  const _base = srcPath.includes('vitson-HTML') ? '/vitson-HTML' : '';
  const supportTabs = [
    { text: '공지사항', href: '/html/support/MO_SP_01010101.html' },
    { text: 'FAQ',     href: '/html/support/MO_SP_02010101.html' },
    { text: '1:1문의', href: '/html-mop/my-support/MO_MY_06030301.ejs.html' },
    { text: '자료실',  href: '/html/support/MO_SP_04010101.html' },
  ];
%>

<div class="vm-mypage-support-nav">
  <nav class="support-tab">
    <% supportTabs.forEach(function(tab, index) { %>
    <a
      href="<%= tab.href === '#!' ? '#!' : _base + tab.href %>"
      class="support-tab-menu <%= index === currentTab ? 'is-active' : '' %>"
    >
      <span class="text"><%= tab.text %></span>
    </a>
    <% }) %>
  </nav>
</div>
