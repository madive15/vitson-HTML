<% const _src = srcPath; const _public = publicPath; %>
<!-- prettier-ignore -->
<%
/**
 * @description 배송지 카드 컴포넌트
 * @scope address-card
 *
 * @option {string} name - 배송지 이름 (예: '회사', '집')
 * @option {boolean} isDefault - 대표배송지 라벨 표시 여부
 * @option {string} recipient - 받는 사람
 * @option {string} phone - 연락처
 * @option {string} address - 주소
 * @option {string} [cargoAddress] - 화물소 주소 (없으면 '정보 없음')
 */
%>

<li class="address-item">
  <div class="address-card">
    <div class="address-card-header">
      <div class="address-card-title">
        <p class="address-card-name"><%= name %></p>
        <!-- prettier-ignore -->
        <% if (isDefault) { %> 
          <%- include(`${_src}/views/components/label/general-label.ejs`, { 
            text: '대표배송지',
            variant: 'red' 
          }) %> 
        <% } %>
      </div>
      <div class="address-card-buttons">
        <!-- prettier-ignore -->
        <%- include(`${_src}/views/components/button/button.ejs`, {
          size: 'sm',
          variant: 'outline-secondary',
          text: '수정'
        }) %>
        <%- include(`${_src}/views/components/button/button.ejs`, {
          size: 'sm',
          variant: 'outline-primary',
          text: '선택'
        }) %>
      </div>
    </div>
    <div class="address-card-body">
      <dl class="address-card-info">
        <dt class="info-dt info-recipient">받는 사람</dt>
        <dd class="info-dd info-recipient"><%= recipient %></dd>
        <dt class="info-dt">연락처</dt>
        <dd class="info-dd"><%= phone %></dd>
        <dt class="info-dt">주소</dt>
        <dd class="info-dd"><%= address %></dd>
        <dt class="info-dt info-cargo">화물소 주소</dt>
        <dd class="info-dd info-cargo">화물<%= cargoAddress ? ` - ${cargoAddress}` : ' 정보 없음' %></dd>
      </dl>
    </div>
  </div>
</li>
