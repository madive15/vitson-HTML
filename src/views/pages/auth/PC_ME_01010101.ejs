<% const _src = srcPath; const _public = publicPath; %>
<!DOCTYPE html>
<!-- 
  [D] vits-scope: 스크롤바 커스텀 범위 제한(운영 전역 scrollbar 충돌 방지)
    - 문서 스크롤 주체가 html/body로 달라질 수 있어 둘 다 클래스 적용 
  -->
<html lang="ko" class="vits-scope">
  <%- include( `${_src}/views/layout/head.ejs`, { meta_title: '회원가입>동의하기', } ) %>
  <!-- [D] vits-scope 적용(상단 주석 참고) -->
  <body class="vits-scope">
    <!-- S: Skip Navigation -->
    <a href="#skipNav" class="skip-nav">본문 바로가기</a>
    <!-- E: Skip Navigation -->

    <!-- S: vits-wrapper -->
    <section class="vits-wrapper">
      <%- include( `${_src}/views/layout/header.ejs` ) %>

      <!-- S: vits-main -->
      <main id="skipNav" class="vits-main">
        <!-- S: vits-wrap -->
        <div class="vits-wrap">
          <!-- S: vits-grid -->
          <div class="vits-grid">
            <!-- S: vits-grid-main -->
            <div class="vits-grid-main vits-main-auth">
              <div class="vits-inner inner-column">
                <section class="vits-signup">
                  <!-- 컨텐츠 헤딩 -->
                  <div class="vits-signup-headline">
                    <h2 class="vits-signup-title">회원가입</h2>
                  </div>

                  <form class="vits-signup-form-wrap" action="#" method="post" novalidate>
                    <div class="vits-signup-inner">
                      <!-- 안내 문구 -->
                      <div class="vits-signup-alert">비츠온엠알오 회원가입을 위해 약관에 동의해주세요</div>

                      <!-- S: 약관 동의 (일반 회원가입: 기업회원 및 공급처 이용 동의 문구 사용) -->
                      <!-- prettier-ignore -->
                      <%- include(`${_src}/views/components/pg-auth/signup-terms-card.ejs`, { agreeBizText: '기업회원 및 공급처 이용 동의' }) %>
                      <!-- E: 약관 동의 -->

                      <!-- S: 정보 입력 -->
                      <div class="vits-signup-form">
                        <div class="vits-form-row">
                          <label class="vits-form-label" for="signup-bizno">
                            사업자등록번호 <span class="label-required" aria-hidden="true">*</span>
                          </label>
                          <div class="vits-form-field">
                            <!-- prettier-ignore -->
                            <%- include(`${_src}/views/components/form/input-text.ejs`, {
                            id: 'signup-bizno',
                            name: 'bizNo',
                            label: '사업자등록번호',
                            placeholder: '사업자등록번호',
                            required: true,
                            rootClass: 'size-large',
                          }) %>
                          </div>
                        </div>
                        <div class="vits-form-row">
                          <label class="vits-form-label">
                            가입 경로 선택 <span class="label-required" aria-hidden="true">*</span>
                          </label>
                          <div class="vits-form-field">
                            <!-- prettier-ignore -->
                            <%- include(`${_src}/views/components/form/select.ejs`,{
                              id: 'signup-path',
                              name: 'signupPath',
                              placeholder: '가입경로 선택',
                              className: 'size-l',
                              disabled: false, 
                              maxHeight: 240,
                              options: [
                                { value: 'search', text: '키워드 검색' },
                                { value: 'intro', text: '유튜브' },
                                { value: 'intro', text: '블로그' },
                                { value: 'intro', text: '카페' },
                                { value: 'intro', text: '라디오 광고' },
                                { value: 'intro', text: '페이스북' },
                                { value: 'intro', text: '인스타' },
                                { value: 'intro', text: '뉴스' },
                                { value: 'intro', text: '온라인 배너' },
                                { value: 'intro', text: '지인 소개' },
                                { value: 'etc', text: '기타' },
                                { value: 'intro', text: '책자우편물' },
                                { value: 'ads', text: '차량광고' },
                                { value: 'intro', text: '방문영업' },
                                { value: 'intro', text: 'FAX' }
                              ]
                            }) %>
                          </div>
                        </div>
                        <div class="vits-form-row">
                          <label class="vits-form-label" for="signup-referrer">추천인 아이디</label>
                          <div class="vits-form-field">
                            <!-- prettier-ignore -->
                            <%- include(`${_src}/views/components/form/input-text.ejs`, {
                            id: 'signup-referrer',
                            name: 'referrerId',
                            label: '추천인 아이디',
                            placeholder: '추천인 아이디',
                            rootClass: 'size-large',
                          }) %>
                          </div>
                        </div>
                      </div>
                      <!-- E: 정보 입력 -->
                    </div>

                    <!-- 가입하기 버튼 -->
                    <div class="vits-signup-submit">
                      <!-- prettier-ignore -->
                      <%- include(`${_src}/views/components/button/button.ejs`,{
                        type: 'submit',
                        size: 'xxl',
                        variant: 'primary',
                        text: '본인인증 후 가입하기',
                        className: 'vits-signup-submit-btn',
                      }) %>
                    </div>
                  </form>
                </section>
              </div>
            </div>
            <!-- E: vits-grid-main -->
          </div>
          <!-- E: vits-grid -->
        </div>
        <!-- E: vits-wrap -->
      </main>
      <!-- E: vits-main -->

      <%- include( `${_src}/views/layout/footer.ejs` ) %>
    </section>
    <!-- E: vits-wrapper -->

    <%- include( `${_src}/views/layout/footer.links.ejs` ) %>
  </body>
</html>
