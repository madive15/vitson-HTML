<% const _src = srcPath; const _public = publicPath; %>
<!DOCTYPE html>
<!-- 
  [D] vits-scope: 스크롤바 커스텀 범위 제한(운영 전역 scrollbar 충돌 방지)
    - 문서 스크롤 주체가 html/body로 달라질 수 있어 둘 다 클래스 적용 
  -->
<html lang="ko" class="vits-scope">
  <%- include(`${_src}/views/layout/head.ejs`, {meta_title: '자주구매 상품목록'}) %>
  <!-- [D] vits-scope 적용(상단 주석 참고) -->
  <body class="vits-scope">
    <!-- S: Skip Navigation -->
    <a href="#skipNav" class="skip-nav">본문 바로가기</a>
    <!-- E: Skip Navigation -->

    <!-- S: vits-wrapper -->
    <section class="vits-wrapper">
      <%- include(`${_src}/views/layout/header.ejs`) %>

      <!-- S: vits-main -->
      <main id="skipNav" class="vits-main">
        <!-- S: vits-wrap -->
        <div class="vits-wrap">
          <!-- S: vits-grid -->
          <div class="vits-grid">
            <div class="vits-grid-main vits-main-my-favorites">
              <div class="vits-inner inner-column">
                <div class="vits-grid-area">
                  <!-- S: vits-grid-side-left -->
                  <%- include(`${_src}/views/layout/lnb/lnb-mypage.ejs`) %>
                  <!-- E: vits-grid-side-left -->

                  <!-- S: vits-grid-main -->
                  <div class="vits-grid-main-content main-content-my-favorites">
                    <div class="vits-mypage-content-headline">
                      <h2 class="vits-mypage-content-title">자주 구매</h2>
                      <p class="vits-mypage-content-desc">자주 구매한 상품을 확인하고 빠르게 주문하세요</p>
                    </div>

                    <div class="vits-mypage-content-notice">
                      <ul class="notice-list">
                        <li>최근 12개월간 2회 이상 주문하신 상품에 대한 목록입니다.</li>
                        <li>각 상품은 현재 판매되고 있는 가격입니다.</li>
                      </ul>
                    </div>

                    <div class="vits-mypage-panel">
                      <section class="vits-mypage-favorites type-product-list">
                        <h3 class="sr-only">자주구매 상품 리스트</h3>

                        <div class="favorites-product-list-box">
                          <!-- prettier-ignore -->
                          <%- include(`${_src}/views/components/pg-my-favorites/my-favorites-meta.ejs`, {
                            pageType: 'frequent' }) %>
  
                          <%- include(`${_src}/views/components/pg-my-favorites/my-favorites-frequent-list.ejs`, {
                            _src: _src,
                            totalCount: 60,
                            productList: [],
                            pagination: {}  
                          }) %>
                        </div>
                      </section>
                    </div>
                  </div>

                  <!-- E: vits-grid-main -->
                </div>
              </div>
            </div>
          </div>
          <!-- E: vits-grid -->
        </div>
        <!-- E: vits-wrap -->
      </main>
      <!-- E: vits-main -->

      <%- include(`${_src}/views/layout/footer.ejs`) %>
    </section>
    <!-- E: vits-wrapper -->

    <%- include(`${_src}/views/layout/footer.links.ejs`) %>
  </body>
</html>
