<% const _src = srcPath; const _public = publicPath; %>
<!DOCTYPE html>
<!-- 
  [D] vits-scope: 스크롤바 커스텀 범위 제한(운영 전역 scrollbar 충돌 방지)
    - 문서 스크롤 주체가 html/body로 달라질 수 있어 둘 다 클래스 적용 
  -->
<html lang="ko" class="vits-scope">
  <%- include(`${_src}/views/layout/head.ejs`, {meta_title: '쿠폰 받기 없음'}) %>
  <!-- [D] vits-scope 적용(상단 주석 참고) -->
  <body class="vits-scope">
    <!-- S: Skip Navigation -->
    <a href="#skipNav" class="skip-nav">본문 바로가기</a>
    <!-- E: Skip Navigation -->

    <!-- S: vits-wrapper -->
    <section class="vits-wrapper">
      <%- include(`${_src}/views/layout/header.ejs`) %>

      <!-- S: vits-main -->
      <main id="skipNav" class="vits-main">
        <!-- S: vits-wrap -->
        <div class="vits-wrap">
          <!-- S: vits-grid -->
          <div class="vits-grid">
            <!-- S: vits-grid-main -->
            <div class="vits-grid-main vits-main-my-coupon">
              <div class="vits-inner inner-column">
                <!-- 1280 컨텐츠 -->
                <div class="vits-grid-area">
                  <!-- S: vits-grid-side-left -->
                  <!-- 왼쪽메뉴 -->
                  <%- include(`${_src}/views/layout/lnb/lnb-mypage.ejs`) %>
                  <!-- E: vits-grid-side-left -->

                  <div class="vits-grid-main-content main-content-my-coupon">
                    <!-- 메인 컨텐츠 -->

                    <!-- 컨텐츠 헤딩 -->
                    <div class="vits-mypage-content-headline">
                      <h2 class="vits-mypage-content-title">쿠폰함</h2>
                      <p class="vits-mypage-content-desc">다양한 할인 혜택을 확인하고 관리해보세요.</p>
                    </div>

                    <div class="vits-mypage-panel">
                      <!-- prettier-ignore -->
                      <%- include(`${_src}/views/components/tabs.ejs`, {
                        size: 'lg',
                        className: 'vits-mypage-top-tabs',
                        tabClassName: 'vits-btn-md vits-my-coupon-tab-btn',
                        tabs: [
                          { text: '보유 쿠폰', badge: '22' },
                          { text: '쿠폰 받기', badge: 'N' , isActive: true}
                        ],
                        showBadge: true,
                        ariaLabel: '마이페이지 쿠폰 탭',
                        idPrefix: 'coupon-tab'
                      }) %>

                      <!-- prettier-ignore -->
                      <%- include(`${_src}/views/components/pg-my-coupon/my-coupon-promotion.ejs`) %>

                      <!-- 다운로드 가능 쿠폰 없음 -->
                      <div class="vits-mypage-records-box type-empty">
                        <div class="vits-mypage-records-box-title">다운로드 가능한 쿠폰</div>
                        <!-- prettier-ignore -->
                        <%- include(`${_src}/views/components/empty-state.ejs`, {
                          iconName: 'box',
                          title: '다운로드 할 수 있는 쿠폰이 없습니다.',
                        }) %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- full wide 컨텐츠 -->
            </div>
            <!-- E: vits-grid-main -->
          </div>
          <!-- E: vits-grid -->
        </div>
        <!-- E: vits-wrap -->
      </main>
      <!-- E: vits-main -->

      <%- include(`${_src}/views/layout/footer.ejs`) %>
    </section>
    <!-- E: vits-wrapper -->

    <%- include(`${_src}/views/layout/footer.links.ejs`) %>
  </body>
</html>
