  <body class="vits-scope" data-guide="true">
    <main>
      <!-- S: vits-guide-wrapper -->
      <section class="vits-guide-wrapper" aria-labelledby="guide-icons-title">
        <h2 class="vits-guide-title" id="guide-icons-title">Breadcrumb</h2>

        <h3 class="vits-guide-subtitle">기본 구조</h3>

        <div class="vits-guide-code">
          <code>
            <pre>
&lt;nav class="vits-breadcrumb { addclass }"&gt;
  &lt;ul class="vits-breadcrumb-list"&gt;
    &lt;li class="vits-breadcrumb-menu"&gt;
    &lt;/li&gt;

    &lt;li class="vits-breadcrumb-menu"&gt;
    &lt;/li&gt;

    &lt;li class="vits-breadcrumb-menu"&gt;
    &lt;/li&gt;

    &lt;li class="vits-breadcrumb-menu"&gt;
    &lt;/li&gt;
  &lt;/ul&gt;
&lt;/nav&gt;
</pre
            >
          </code>
        </div>
      </section>
      <!-- E: vits-guide-wrapper -->
    </main>

    <%- include(`${_src}/views/layout/footer.links.ejs`) %>
  </body>
</html>
