<% const _src = srcPath; const _public = publicPath; %>

<!DOCTYPE html>
<!-- 
  [D] vits-scope: 스크롤바 커스텀 범위 제한(운영 전역 scrollbar 충돌 방지)
    - 문서 스크롤 주체가 html/body로 달라질 수 있어 둘 다 클래스 적용 
  -->
<html lang="ko" class="vits-scope">
  <%- include(`${_src}/views/layout/head.ejs`, {meta_title: '가이드 - 상태별 폰트'}) %>
  <!-- [D] vits-scope 적용(상단 주석 참고) || 가이드 페이지 식별: data-guide="true" -->
  <body class="vits-scope" data-guide="true">
    <main>
      <!-- S: vits-guide-wrapper -->
      <section class="vits-guide-wrapper" aria-labelledby="guide-icons-title">
        <h2 class="vits-guide-title" id="guide-icons-title">아이콘</h2>

        <div class="vits-guide-code">
          <code>
            <pre>
&lt;--
    status-text
      - type + status 코드만으로 텍스트 자동 출력
    
    params:
      - type: 'order' | 'claim' (필수)
      - status: '01'~ (필수)  // 숫자(1)로 와도 내부에서 '01'로 보정
      - tag: string (선택, default 'p')
      - addClassName: string (선택)
      - text: string (선택) // 있으면 매핑보다 우선(예외 처리용)

    주문상태 type: order
      - status="01" [ 주문접수 ]
      - status="02" [ 결제완료 ]
      - status="03" [ 주문완료 ]
      - status="04" [ 주문확정 ]
      - status="05" [ 배송준비중 ]
      - status="06" [ 배송중 ]
      - status="07" [ 배송완료 ]
    
    클라임 상태 type: claim
      - status="01" [ 취소 ]
      - status="02" [ 취소신청 ]
      - status="03" [ 주문취소 ]
      - status="04" [ 반품 ]
      - status="05" [ 반품신청 ]
      - status="06" [ 반품접수 ]
      - status="07" [ 회수진행중 ]
      - status="08" [ 회수완료 ]
      - status="09" [ 반품완료 ]
      - status="10" [ 반품취소 ]
      - status="11" [ 반품승인불가 ]
      - status="12" [ 반품불가 ]
--&gt;
</pre
            >
          </code>
        </div>

        <div class="vits-guide-wrap">
          <ul class="vits-guide-list">
            <% for (let i = 1; i <= 7; i++) { const code = String(i).padStart(2, '0'); %>
            <li>
              <%- include(`${_src}/views/components/label/text-status.ejs`, { type: 'order', status: code }) %>
              <p>type: 'order', status: <%- code %></p>
            </li>
            <% } %>
          </ul>
          <ul class="vits-guide-list">
            <% for (let i = 1; i <= 12; i++) { const code = String(i).padStart(2, '0'); %>
            <li>
              <%- include(`${_src}/views/components/label/text-status.ejs`, { type: 'claim', status: code }) %>
              <p>type: 'claim', status: <%- code %></p>
            </li>
            <% } %>
          </ul>
        </div>
      </section>
      <!-- E: vits-guide-wrapper -->
    </main>

    <%- include(`${_src}/views/layout/footer.links.ejs`) %>
  </body>
</html>
