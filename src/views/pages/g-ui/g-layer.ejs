<% const _src = srcPath; const _public = publicPath; %>

<!DOCTYPE html>
<!-- 
  [D] vits-scope: 스크롤바 커스텀 범위 제한(운영 전역 scrollbar 충돌 방지)
    - 문서 스크롤 주체가 html/body로 달라질 수 있어 둘 다 클래스 적용 
  -->
<html lang="ko" class="vits-scope">
  <%- include(`${_src}/views/layout/head.ejs`, {meta_title: '가이드 - 레이어'}) %>
  <!-- [D] vits-scope 적용(상단 주석 참고) || 가이드 페이지 식별: data-guide="true" -->
  <body class="vits-scope" data-guide="true">
    <main>
      <!-- S: vits-guide-wrapper -->
      <section class="vits-guide-wrapper" aria-labelledby="guide-icons-title">
        <h2 class="vits-guide-title" id="guide-icons-title">레이어</h2>

        <h3 class="vits-guide-subtitle">모달</h3>
        <div class="vits-guide-code">
          <code>
            <pre>
&lt;button
  type="button"
  data-layer-btn
  data-layer-target="helpModal"
  data-layer-type="modal"
  data-layer-group="true"
  data-layer-outside="true"
  data-layer-esc="true"
  data-layer-lock="true"
  aria-expanded="false"
&gt;
  모달
&lt;/button&gt;

&lt;div data-layer-box="helpModal" data-layer-type="modal"&gt;
  &lt;div class="modal-inner"&gt;
    &lt;button type="button" data-layer-close aria-label="닫기"&gt;&lt;/button&gt;
    &lt;!-- 내용 자유 --&gt;
  &lt;/div&gt;
&lt;/div&gt;
          </pre
            >
          </code>
        </div>

        <h3 class="vits-guide-subtitle">바텀시트</h3>
        <div class="vits-guide-code">
          <code>
            <pre>
&lt;button
  type="button"
  data-layer-btn
  data-layer-target="filterSheet"
  data-layer-type="bottom"
  data-layer-outside="true"
  data-layer-esc="true"
  data-layer-lock="true"
  aria-expanded="false"
&gt;
  필터
&lt;/button&gt;

&lt;div data-layer-box="filterSheet" data-layer-type="bottom"&gt;
  &lt;div class="sheet-inner"&gt;
    &lt;button type="button" data-layer-close&gt;닫기&lt;/button&gt;
    &lt;!-- 내용 자유 --&gt;
  &lt;/div&gt;
&lt;/div&gt;
          </pre
            >
          </code>
        </div>
      </section>
      <!-- E: vits-guide-wrapper -->
    </main>

    <%- include(`${_src}/views/layout/footer.links.ejs`) %>
  </body>
</html>
