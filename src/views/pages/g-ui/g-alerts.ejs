<% const _src = srcPath; const _public = publicPath; %>

<!DOCTYPE html>
<!-- 
  [D] vits-scope: 스크롤바 커스텀 범위 제한(운영 전역 scrollbar 충돌 방지)
    - 문서 스크롤 주체가 html/body로 달라질 수 있어 둘 다 클래스 적용 
  -->
<html lang="ko" class="vits-scope">
  <%- include(`${_src}/views/layout/head.ejs`, {meta_title: '가이드 - alerts'}) %>
  <!-- [D] vits-scope 적용(상단 주석 참고) || 가이드 페이지 식별: data-guide="true" -->
  <body class="vits-scope" data-guide="true">
    <main>
      <!-- S: vits-guide-wrapper -->
      <section class="vits-guide-wrapper" aria-labelledby="guide-icons-title">
        <h2 class="vits-guide-title" id="guide-icons-title">Alerts</h2>

        <h3 class="vits-guide-subtitle">alerts-anatomy</h3>

        <div class="vits-guide-code">
          <code>
            <pre>
&lt;%- include(`${_src}/views/components/alerts/alerts-anatomy.ejs`, {
  theme: 'red',                // (필수) 'red' | 'blue' - 기본값 'red'
  text: '텍스트 내용이 들어갑니다',  // (필수) 메인 텍스트
  list:['항목1','항목2']         // (선택) 블릿 리스트
}) %&gt;

// 추가 클래스 사용법:
   - 상위: className: 'custom-style'
   - li: { text: '텍스트', className: 'alerts-point' }
&lt;%- include(`${_src}/views/components/alerts/alerts-anatomy.ejs`, {
  theme: 'blue',
  className: 'custom-style',
  text: '안내 문구입니다.',
  list: [
    '일반 항목',
    { text: '강조 항목', className: 'alerts-point' },
    '일반 항목',
    { text: '또 강조', className: 'alerts-point' },
  ]
}) %&gt;
            </pre>
          </code>
        </div>

        <div class="vits-guide-wrap">
          <ul class="vits-guide-list full">
            <li>
              <!-- prettier-ignore -->
              <%- include(`${_src}/views/components/alerts/alerts-anatomy.ejs`, {
                theme: 'red', text: '텍스트 내용이 들어갑니다'
              }) %>
            </li>
            <li>
              <!-- prettier-ignore -->
              <%- include(`${_src}/views/components/alerts/alerts-anatomy.ejs`, {
                theme: 'red', text: '텍스트 내용이 들어갑니다', list:['첫번째 텍스트 내용이 들어갑니다.','두번째 텍스트 내용이 들어갑니다.']
              }) %>
            </li>
            <li>
              <!-- prettier-ignore -->
              <%- include(`${_src}/views/components/alerts/alerts-anatomy.ejs`, {
                theme: 'blue', text: '텍스트 내용이 들어갑니다'
              }) %>
            </li>
            <li>
              <!-- prettier-ignore -->
              <%- include(`${_src}/views/components/alerts/alerts-anatomy.ejs`, {
                theme: 'blue', text: '텍스트 내용이 들어갑니다', list:['첫번째 텍스트 내용이 들어갑니다.','두번째 텍스트 내용이 들어갑니다.']
              }) %>
            </li>
          </ul>
        </div>

        <h3 class="vits-guide-subtitle">alerts-order</h3>

        <div class="vits-guide-code">
          <code>
            <pre>
&lt;%- include(`${_src}/views/components/alerts/alerts-order.ejs`, {
  type: 'r-warning',              // (필수) 'r-warning' | 'b-warning' - 기본값 'r-warning'
  text: '일반 텍스트',              // (선택) 일반 텍스트 (type-b-warning에만 표시)
  importantItems: [                // (선택) 중요 텍스트 배열
    {
      text: '텍스트 앞부분 ',
      strong: '강조 텍스트',
      after: ' 텍스트 뒷부분',
      hasIcon: true                // (선택) 아이콘 표시 여부 - 기본값 true
    }
  ]
}) %&gt;
            </pre>
          </code>
        </div>

        <div class="vits-guide-wrap">
          <ul class="vits-guide-list full">
            <li>
              <h4 class="vits-guide-item-title">type-r-warning: 텍스트만 (아이콘 없음)</h4>
              <!-- prettier-ignore -->
              <%- include(`${_src}/views/components/alerts/alerts-order.ejs`, {
                type: 'r-warning',
                importantItems: [{
                  text: '총 2건으로 나뉘어 발송될 예정입니다.',
                  hasIcon: false
                }]
              }) %>
            </li>
            <li>
              <h4 class="vits-guide-item-title">type-r-warning: 아이콘 + 텍스트 (strong 포함)</h4>
              <!-- prettier-ignore -->
              <%- include(`${_src}/views/components/alerts/alerts-order.ejs`, {
                type: 'r-warning',
                importantItems: [{
                  text: '주문 후 ',
                  strong: '영업일 5일',
                  after: ' 내에 입금 확인이 되지 않으면 주문이 자동 취소됩니다.'
                }]
              }) %>
            </li>
            <li>
              <h4 class="vits-guide-item-title">type-b-warning: 일반 텍스트 + 아이콘 + 텍스트 여러개</h4>
              <!-- prettier-ignore -->
              <%- include(`${_src}/views/components/alerts/alerts-order.ejs`, {
                type: 'b-warning',
                text: '신용카드 결제가 가능합니다.',
                importantItems: [
                  {
                    text: '신용카드 결제시 ',
                    strong: '세금계산서 발급 불가',
                    after: ' 합니다.'
                  },
                  {
                    text: '신용카드 결제시 ',
                    strong: '세금계산서 발급 불가',
                    after: ' 합니다.'
                  }
                ]
              }) %>
            </li>
            <li>
              <h4 class="vits-guide-item-title">type-b-warning: 아이콘 + 텍스트 여러개</h4>
              <!-- prettier-ignore -->
              <%- include(`${_src}/views/components/alerts/alerts-order.ejs`, {
                type: 'b-warning',
                importantItems: [
                  {
                    text: '신용카드 결제시 ',
                    strong: '세금계산서 발급 불가',
                    after: ' 합니다.'
                  },
                  {
                    text: '신용카드 결제시 ',
                    strong: '세금계산서 발급 불가',
                    after: ' 합니다.'
                  }
                ]
              }) %>
            </li>
          </ul>
        </div>
      </section>
      <!-- E: vits-guide-wrapper -->
    </main>

    <%- include(`${_src}/views/layout/footer.links.ejs`) %>
  </body>
</html>
