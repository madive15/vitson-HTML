<% const _src = srcPath; const _public = publicPath; %>

<!DOCTYPE html>
<!-- 
  [D] vits-scope: 스크롤바 커스텀 범위 제한(운영 전역 scrollbar 충돌 방지)
    - 문서 스크롤 주체가 html/body로 달라질 수 있어 둘 다 클래스 적용 
  -->
<html lang="ko" class="vits-scope">
  <%- include(`${_src}/views/layout/head.ejs`, {meta_title: '가이드 - 라디오'}) %>
  <!-- [D] vits-scope 적용(상단 주석 참고) || 가이드 페이지 식별: data-guide="true" -->
  <body class="vits-scope" data-guide="true">
    <main>
      <!-- S: vits-guide-wrapper -->
      <section class="vits-guide-wrapper" aria-labelledby="guide-icons-title">
        <h2 class="vits-guide-title" id="guide-icons-title">라디오</h2>

        <h3 class="vits-guide-subtitle">list column</h3>

        <div class="vits-guide-code">
          <code>
            <pre>
&lt;%- include(`${_src}/views/components/form/input-radio.ejs`, {
  variant: '',        // 최상위 클래스 추가할 떄
  name: 'rdo1',
  list: 'column',
  gap: 16,
  datas: [
    {
      text: '낱개',
      value: '1',
      qty: 1,
      price: 4150,
      checked: false,  // 기본값 false (true일 때만 기입해도 됨)
      disabled: false, // 기본값 false (true일 때만 기입해도 됨)
      required: false, // 기본값 false (true일 때만 기입해도 됨)
    },
    {
      text: '대포장',
      value: '250',
      qty: 250,
      price: 103750,
      checked: false,  // 기본값 false (true일 때만 기입해도 됨)
      disabled: false, // 기본값 false (true일 때만 기입해도 됨)
      required: false, // 기본값 false (true일 때만 기입해도 됨)
    },
  ]
}) %&gt;
          </pre
            >
          </code>
        </div>

        <div class="vits-guide-wrap">
          <ul class="vits-guide-list full flex-start">
            <li>
              <!-- prettier-ignore -->
              <%- include(`${_src}/views/components/form/input-radio.ejs`, {
                variant: '',
                name: 'rdo1',
                list: 'column',
                gap: 16,
                datas: [
                  {
                    text: '낱개',
                    value: '1',
                    qty: 1,
                    price: 4150,
                    checked: false,
                    disabled: false,
                    required: false,
                  },
                  {
                    text: '대포장',
                    value: '250',
                    qty: 250,
                    price: 103750,
                    checked: false,
                    disabled: false,
                    required: false,
                  },
                ]
              }) %>
            </li>
          </ul>
        </div>

        <h3 class="vits-guide-subtitle">list row</h3>

        <div class="vits-guide-code">
          <code>
            <pre>
&lt;%- include(`${_src}/views/components/form/input-radio.ejs`, {
  variant: '',
  name: 'rdo1',
  list: 'row',
  gap: 18,
  datas: [
    {
      text: '낱개',
      value: '1',
      checked: false,
      disabled: false,
      required: false,
    },
    {
      text: '대포장',
      value: '250',
      checked: false,
      disabled: false,
      required: false,
    },
  ]
}) %&gt;
          </pre
            >
          </code>
        </div>

        <div class="vits-guide-wrap">
          <ul class="vits-guide-list full flex-start">
            <li>
              <!-- prettier-ignore -->
              <%- include(`${_src}/views/components/form/input-radio.ejs`, {
                variant: '',
                name: 'rdo1',
                list: 'row',
                gap: 18,
                datas: [
                  {
                    text: '낱개',
                    value: '1',
                    checked: false,
                    disabled: false,
                    required: false,
                  },
                  {
                    text: '대포장',
                    value: '250',
                    checked: false,
                    disabled: false,
                    required: false,
                  },
                ]
              }) %>
            </li>
          </ul>
        </div>

        <h3 class="vits-guide-subtitle">single (단일 라디오)</h3>

        <div class="vits-guide-code">
          <code>
            <pre>
&lt;%- include(`${_src}/views/components/form/input-radio-single.ejs`, {
  name: 'tax-invoice',        // 라디오 그룹 이름
  id: 'tax-invoice-single',    // 라디오 버튼 ID
  value: 'single',             // 라디오 버튼 값
  text: '개별 발급',            // 라디오 버튼 레이블 텍스트
  checked: false,              // 기본값 false (true일 때만 기입해도 됨)
  disabled: false,             // 기본값 false (true일 때만 기입해도 됨)
  required: false,             // 기본값 false (true일 때만 기입해도 됨)
  ariaControls: 'panel-transfer' // aria-controls 속성 (선택사항)
}) %&gt;
          </pre
            >
          </code>
        </div>

        <div class="vits-guide-wrap">
          <ul class="vits-guide-list full flex-start">
            <li>
              <!-- prettier-ignore -->
              <%- include(`${_src}/views/components/form/input-radio-single.ejs`, {
                name: 'tax-invoice',
                id: 'tax-invoice-single',
                value: 'single',
                text: '개별 발급 <em>(추가 정보)</em>',
                checked: false,
                disabled: false,
                required: false,
                ariaControls: 'panel-transfer'
              }) %>
            </li>
          </ul>
        </div>

        <h4 class="vits-guide-subtitle-small">checked 예제</h4>

        <div class="vits-guide-wrap">
          <ul class="vits-guide-list full flex-start">
            <li>
              <!-- prettier-ignore -->
              <%- include(`${_src}/views/components/form/input-radio-single.ejs`, {
                name: 'tax-invoice',
                id: 'tax-invoice-checked',
                value: 'checked',
                text: '개별 발급 (선택됨)',
                checked: true
              }) %>
            </li>
          </ul>
        </div>

        <h4 class="vits-guide-subtitle-small">disabled 예제</h4>

        <div class="vits-guide-wrap">
          <ul class="vits-guide-list full flex-start">
            <li>
              <!-- prettier-ignore -->
              <%- include(`${_src}/views/components/form/input-radio-single.ejs`, {
                name: 'tax-invoice',
                id: 'tax-invoice-disabled',
                value: 'disabled',
                text: '개별 발급 (비활성화)',
                disabled: true
              }) %>
            </li>
          </ul>
        </div>
      </section>
      <!-- E: vits-guide-wrapper -->
    </main>

    <%- include(`${_src}/views/layout/footer.links.ejs`) %>
  </body>
</html>
