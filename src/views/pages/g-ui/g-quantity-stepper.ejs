<% const _src = srcPath; const _public = publicPath; %>

<!DOCTYPE html>
<!-- 
  [D] vits-scope: 스크롤바 커스텀 범위 제한(운영 전역 scrollbar 충돌 방지)
    - 문서 스크롤 주체가 html/body로 달라질 수 있어 둘 다 클래스 적용 
  -->
<html lang="ko" class="vits-scope">
  <%- include(`${_src}/views/layout/head.ejs`, {meta_title: '가이드 - 수량 조절'}) %>
  <!-- [D] vits-scope 적용(상단 주석 참고) || 가이드 페이지 식별: data-guide="true" -->
  <body class="vits-scope" data-guide="true">
    <main>
      <!-- S: vits-guide-wrapper -->
      <section class="vits-guide-wrapper" aria-labelledby="guide-icons-title">
        <h2 class="vits-guide-title" id="guide-icons-title">수량 조절</h2>

        <div class="vits-guide-code">
          <code>
            &lt;%- include(`${_src}/views/components/form/input-quantity-stepper.ejs`, { type: 'horiz' }) %&gt;
          </code>
        </div>
        <div class="vits-guide-code">
          <pre>
  사용 방법
  
  1) 기본(가로형)
  &lt;%- include(`${_src}/views/components/form/input-quantity-stepper.ejs`, {
    type: 'horiz',
    name: 'quantity',
    value: 1,
    min: 1,
    max: 9999,
    step: 1,
    unit: '개'
  }) %&gt;
  
  2) 세로형
  &lt;%- include(`${_src}/views/components/form/input-quantity-stepper.ejs`, {
    type: 'vertical',
    name: 'quantity2',
    value: 10,
    min: 1,
    max: 9999,
    step: 1,
    unit: '박스'
  }) %&gt;
  
  3) 옵션 추가
  &lt;%- include(`${_src}/views/components/form/input-quantity-stepper.ejs`, {
    type: 'horiz',
    variant: 'is-compact',
    name: 'quantity3',
    value: 1,
    min: 1,
    max: 5,
    step: 1,
    unit: 'EA',
    disabled: false,
    required: false
  }) %&gt;
  
  파라미터
  - type: 'horiz' | 'vertical' (기본값: 'horiz')
  - variant: wrapper에 추가할 클래스
  - name: input name
  - value: 초기값
  - min: 최소값 (기본값: 1)
  - max: 최대값 (기본값: Infinity)
  - step: 증감 단위 (기본값: 1)
  - unit: 단위 텍스트 (미입력 시 숨김)
  - disabled: 비활성화 여부 (기본값: false)
  - required: 필수 여부 (기본값: false)
          </pre>
        </div>

        <div class="vits-guide-wrap">
          <ul class="vits-guide-list full flex-start">
            <li>
              <h4 class="vits-guide-subtitle">기본(가로형)</h4>
              <!-- prettier-ignore -->
              <%- include(`${_src}/views/components/form/input-quantity-stepper.ejs`, {
                type: 'horiz',        // 'horiz' 또는 'vertical' (기본값: 'horiz')
                variant: '',          // 최상위 wrapper에 추가할 클래스
                name: 'quantity',     // input의 name 속성
                value: 1,             // 초기값 (기본값: 1)
                min: 1,               // 최소값 (기본값: 1)
                step: 1,              // 증가/감소 단위 (기본값: 1)
                unit: '개',           // 단위 텍스트
                disabled: false,      // 비활성화 여부 (기본값: false)
                required: false       // 필수 여부 (기본값: false)
              }) %>
            </li>
            <li>
              <h4 class="vits-guide-subtitle">기본(세로형)</h4>
              <!-- prettier-ignore -->
              <%- include(`${_src}/views/components/form/input-quantity-stepper.ejs`, {
                type: 'vertical',
                variant: '',
                name: 'quantity2',
                value: 10,
                min: 1,
                step: 1,
                unit: '박스',
                disabled: false,
                required: false
              }) %>
            </li>
            <li>
              <h4 class="vits-guide-subtitle">최소 1 개 , 최대 5 개</h4>
              <!-- prettier-ignore -->
              <%- include(`${_src}/views/components/form/input-quantity-stepper.ejs`, {
                type: 'horiz',
                variant: 'is-compact',
                name: 'quantity3',
                value: 1,
                min: 1,
                max: 5,
                step: 1,
                unit: 'EA',
                disabled: false,
                required: false
              }) %>
            </li>
            <li>
              <h4 class="vits-guide-subtitle">input 입력 disabled 상태</h4>
              <!-- prettier-ignore -->
              <%- include(`${_src}/views/components/form/input-quantity-stepper.ejs`, {
                type: 'horiz',
                variant: 'is-compact',
                name: 'quantity3',
                value: 1,
                min: 1,
                max: 5,
                step: 2,
                unit: 'EA',
                disabled: false,
                required: false
              }) %>
            </li>
          </ul>
        </div>
      </section>

      <!-- E: vits-guide-wrapper -->
    </main>

    <%- include(`${_src}/views/layout/footer.links.ejs`) %>
  </body>
</html>
