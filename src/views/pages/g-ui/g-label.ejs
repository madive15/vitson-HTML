<% const _src = srcPath; const _public = publicPath; %>

<!DOCTYPE html>
<!-- 
  [D] vits-scope: 스크롤바 커스텀 범위 제한(운영 전역 scrollbar 충돌 방지)
    - 문서 스크롤 주체가 html/body로 달라질 수 있어 둘 다 클래스 적용 
  -->
<html lang="ko" class="vits-scope">
  <%- include(`${_src}/views/layout/head.ejs`, {meta_title: '가이드 - 라벨'}) %>
  <!-- [D] vits-scope 적용(상단 주석 참고) || 가이드 페이지 식별: data-guide="true" -->
  <body class="vits-scope" data-guide="true">
    <main>
      <!-- S: vits-guide-wrapper -->
      <section class="vits-guide-wrapper" aria-labelledby="guide-icons-title">
        <h2 class="vits-guide-title" id="guide-icons-title">라벨</h2>

        <div class="vits-guide-code">
          <code>
            <pre>
&lt;-- product-flags --&gt;
&lt;%- include(`${_src}/views/components/label/product-flags.ejs`, {
  today: true,    // 오늘출발
  tomorrow: true, // 내일출발
  hot: true,      // 특가
  textCount: 5.   // ?회 구매
}) %&gt;

&lt;-- product-promo-badge --&gt;
&lt;%- include(`${_src}/views/components/label/product-promo-badge.ejs`, { text: '무료배송', variant: 'free-ship' }) %&gt;

&lt;-- general-label (개별 사용, variant: blue | red | green | gray , sunken) --&gt;
&lt;%- include(`${_src}/views/components/label/general-label.ejs`, { text: '대표', variant: 'blue' }) %&gt;
</pre
            >
          </code>
        </div>

        <div class="vits-guide-wrap">
          <ul class="vits-guide-list">
            <li>
              <!-- prettier-ignore -->
              <%- include(`${_src}/views/components/label/product-flags.ejs`, {
                  today: true,
                  tomorrow: true,
                  hot: true,
                  textCount: 5
                }) %>
            </li>
            <li>
              <%- include(`${_src}/views/components/label/product-promo-badge.ejs`, { text: '무료배송', variant:
              'free-ship' }) %>
            </li>
          </ul>
          <ul class="vits-guide-list">
            <li>
              <!-- prettier-ignore -->
              <%- include(`${_src}/views/components/label/general-label.ejs`, { 
                text: '대표', 
                variant: 'blue' 
              }) %>
              <!-- prettier-ignore -->
              <%- include(`${_src}/views/components/label/general-label.ejs`, { text: '대표배송지', variant: 'red' }) %>
              <%- include(`${_src}/views/components/label/general-label.ejs`, { text: '공지', variant: 'green' }) %>
              <%- include(`${_src}/views/components/label/general-label.ejs`, { text: '가격변동', variant: 'red' }) %>
              <%- include(`${_src}/views/components/label/general-label.ejs`, { text: '답변대기', variant: 'gray' }) %>
              <%- include(`${_src}/views/components/label/general-label.ejs`, { text: '답변완료', variant: 'green' }) %>
              <%- include(`${_src}/views/components/label/general-label.ejs`, { text: '진행중', variant: 'blue' }) %>
              <%- include(`${_src}/views/components/label/general-label.ejs`, { text: '종료', variant: 'gray' }) %>
              <%- include(`${_src}/views/components/label/general-label.ejs`, { text: '미사용', variant: 'gray' }) %>
              <%- include(`${_src}/views/components/label/general-label.ejs`, { text: '사용', variant: 'blue' }) %>
            </li>
            <li>
              <!-- prettier-ignore -->
              <h3 style="font-weight: 400;">sunken - 일반 그레이보다 연한 색상</h3>
              <%- include(`${_src}/views/components/label/general-label.ejs`, { text: '배송/반품/교환', variant:
              'sunken' }) %>
            </li>
          </ul>
        </div>
      </section>
      <!-- E: vits-guide-wrapper -->
    </main>

    <%- include(`${_src}/views/layout/footer.links.ejs`) %>
  </body>
</html>
