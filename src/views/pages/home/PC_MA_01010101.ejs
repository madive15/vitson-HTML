<% const _src = srcPath; const _public = publicPath; %>
<!DOCTYPE html>
<!-- 
  [D] vits-scope: 스크롤바 커스텀 범위 제한(운영 전역 scrollbar 충돌 방지)
    - 문서 스크롤 주체가 html/body로 달라질 수 있어 둘 다 클래스 적용 
  -->
<html lang="ko" class="vits-scope">
  <%- include(`${_src}/views/layout/head.ejs`, {meta_title: '메인 홈'}) %>
  <!-- [D] vits-scope 적용(상단 주석 참고) -->
  <body class="vits-scope">
    <!-- S: Skip Navigation -->
    <a href="#skipNav" class="skip-nav">본문 바로가기</a>
    <!-- E: Skip Navigation -->

    <!-- S: vits-wrapper -->
    <section class="vits-wrapper">
      <%- include(`${_src}/views/layout/header.ejs`) %>

      <!-- S: vits-main -->
      <main id="skipNav" class="vits-main">
        <!-- S: vits-wrap -->
        <div class="vits-wrap">
          <!-- S: vits-grid -->
          <div class="vits-grid">
            <!-- S: vits-grid-main -->
            <div class="vits-grid-main vits-main-home">
              <!-- 메인 홈 컨텐츠 -->
              <!-- S: 메인 배너 -->
              <!-- prettier-ignore -->
              <section class="home-section">
                <%-include(`${_src}/views/components/pg-home/home-main-banner.ejs`) %>
              </section>
              <!-- E: 메인 배너 -->
              <!-- S: 자주 찾는 메뉴 -->
              <section class="home-section">
                <%- include(`${_src}/views/components/pg-home/home-frequent-menu.ejs`) %>
              </section>
              <!-- E: 자주 찾는 메뉴 -->
              <!-- S: 대표 카테고리 메뉴 -->
              <section class="home-section">
                <!-- prettier-ignore -->
                <%- include(`${_src}/views/components/pg-home/home-section-title.ejs`, { title: '당신에게 맞는', point: '쇼핑 시작하기', description: '구매 목적에 맞는 카테고리를 선택하세요', type: 'point' }) %>
                <%- include(`${_src}/views/components/pg-home/home-main-category-menu.ejs`) %>
              </section>
              <!-- E: 대표 카테고리 메뉴 -->
              <section class="home-section">
                <%- include(`${_src}/views/components/pg-home/home-section-title.ejs`, { title: '비츠온만의', point:
                '초특가 제안', description: '지금, 비츠온이 가장 저렴합니다!' }) %>
              </section>
              <section class="home-section">
                <%- include(`${_src}/views/components/pg-home/home-section-title.ejs`, { title: '고객님께서', point:
                '자주 구매한 상품', description: '지금 이 상품이 필요하신가요?' }) %>
              </section>

              <section class="home-section">
                <%- include(`${_src}/views/components/pg-home/home-section-title.ejs`, { title: '지금 많이 찾으시는',
                point: '카테고리', description: '인기 카테고리를 확인해보세요' }) %>
              </section>
              <section class="home-section">
                <!-- prettier-ignore -->
                <%- include(`${_src}/views/components/pg-home/home-section-title.ejs`, { title: '우리 ', point: '업종에 꼭 맞는', suffix: '상품 추천', description: '복잡한 비교가 필요 없는 필수 품목 모음' }) %>
                <%- include(`${_src}/views/components/pg-home/home-event-banner.ejs`) %>
              </section>
              <section class="home-section">
                <%- include(`${_src}/views/components/pg-home/home-ad-banner.ejs`, { type: 'line' }) %>
              </section>
              <section class="home-section">
                <%- include(`${_src}/views/components/pg-home/home-section-title.ejs`, { title: '비츠온', point:
                '반짝특가', description: '카테고리별 인기 상품을 특가로 만나보세요' }) %>
              </section>
              <section class="home-section">
                <%- include(`${_src}/views/components/pg-home/home-section-title.ejs`, { title: '비츠온', point:
                '레전드', description: '매월 10만개 + 상품! 믿고 담아보세요' }) %>
              </section>
              <section class="home-section">
                <!-- prettier-ignore -->
                <%- include(`${_src}/views/components/pg-home/home-section-title.ejs`, { title: '비츠온', point: 'Pick 브랜드', description: '비츠온에서 추천하는 기업이에요', showMoreLink: true }) %>
              </section>
              <section class="home-section">
                <%- include(`${_src}/views/components/pg-home/home-section-title.ejs`, { title: '카테고리',
                point:'BEST'}) %>
              </section>

              <section class="home-section">
                <%- include(`${_src}/views/components/pg-home/home-product-list.ejs`) %>
              </section>

              <section class="home-section">
                <%- include(`${_src}/views/components/pg-home/home-ad-banner.ejs`, { type: 'double' }) %>
              </section>
            </div>
            <!-- E: vits-grid-main -->
          </div>
          <!-- E: vits-grid -->
        </div>
        <!-- E: vits-wrap -->
      </main>
      <!-- E: vits-main -->

      <%- include(`${_src}/views/layout/footer.ejs`) %>
    </section>
    <!-- E: vits-wrapper -->

    <%- include(`${_src}/views/layout/footer.links.ejs`) %>
  </body>
</html>
