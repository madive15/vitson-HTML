<section class="vits-order-select">
  <!-- prettier-ignore -->
  <%- include(`${_src}/views/components/alerts/alerts-anatomy.ejs`, {theme: 'blue', text: '최근 6개월 주문만 조회됩니다.'}) %>

  <div class="order-select-table vits-scrollbar" data-scroll-check>
    <div class="general-table-wrap">
      <table class="general-table">
        <!-- prettier-ignore -->
        <%- include(`${_src}/views/components/table/thead-row.ejs`, {
          caption: '주문 목록',
          columns: [
            { width: 50, label: 'No.' },
            { width: 110, label: '주문날짜' },
            { width: 110, label: '주문번호' },
            { width: 374, label: '주문내용' },
            { width: 92, label: '선택' }
          ]
        }) %>
        <tbody>
          <% orderList.forEach(function(item) { %>
          <tr class="order-select-row">
            <td><%= item.no %></td>
            <td><%= item.date %></td>
            <td><%= item.orderNo %></td>
            <td>
              <span class="order-select-img">
                <img src="<%= item.imgUrl %>" alt="" />
                <%= item.content %><%= item.extra ? ' ' + item.extra : '' %>
              </span>
            </td>
            <td>
              <!-- prettier-ignore -->
              <span class="order-select-radio">
                <%- include(`${_src}/views/components/form/input-radio-single.ejs`, {
                  name: 'orderSelect',
                  value: 'order-' + item.no,
                  checked: item.checked
                }) %>
              </span>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <!-- prettier-ignore -->
    <%- include(`${_src}/views/components/empty-state.ejs`, {
      iconName: 'document-paper',
      title: '최근 6개월간 주문 내역이 없습니다',
      hidden: true
    }) %>
  </div>
</section>
