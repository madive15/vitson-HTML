<% const _src = srcPath; const _public = publicPath; %>
<!-- prettier-ignore -->
<%
  const consentSections = [
    {
      num: 1,
      title: '개인신용 정보의 수집·이용의 대상과 목적',
      body:['(주)일신비츠온과 거래를 위하여 거래약정을 체결하는 개인, 법인 또는 사업자의 대표자 및 보증인' , '상거래관계 설정 또는 유지, 채권추심을 위한 신용 정보 조회, 연제정보 채무불이행자 등록 등']
    },
    {
      num: 2,
      title: '수집·이용하는 개인신용 정보의 내용',
      body: ['거래약정서, 사업자등록증, 통장사본, 명함 등 ', '개인식별정보 : 성명, 생년월일, 연락처, 주소 등']
    },
    {
      num: 3,
      title: '제공ㆍ조회하는 개인신용 정보의 내용',
      body: ['개인식별정보(성명, 주소, 연락처 등), 신용거래정보(대출, 카드, 보증 등), 공공정보(체납, 파산 등), 신용능력정보(소득, 재산 등), 기타 신용도 판단정보 및 배송기본정보 등']
    },
    {
      num: 4,
      title: '개인신용 정보의 제공·조회 기관 및 방법',
      body: ['코리아크레딧뷰로㈜, 한국기업데이터㈜, ㈜데이터코리아, NICE평가정보, 배송위탁기관(롯데택배 외 3) 등 ㈜일신비츠온이 제공하는 방법을 포함합니다.']
    },
    {
      num: 5,
      title: '개인신용 정보의 보유 및 이용 기간',
      body: ['수집 · 이용에 관한 동의 일로부터 개인신용 정보의 수집 · 이용 목적 달성과 상거래 관계 종료일까지', '본 동의는 거절할 수 있으며, 동의가 없을 경우 신용 및 상거래관계 제한 또는 불가능할 수 있습니다.']
    }
  ];

  const consentCheckItems = [
    { id: 'consent-personal', label: '개인정보 : 생년월일 등 개인정보 항목' },
    { id: 'consent-credit', label: '신용정보 : 식별정보, 신용거래정보 등' }
  ];

  const buyerFirstRow = { label: '대표(구매자) 성명', value: '김메가', signLabel: '서명(인)' };
  const buyerRestRows = [
    { left: { label: '생년월일', input: true, placeholder: '예) 1990-01-01' }, right: { label: '연락처(구매자 명의 휴대폰)', input: true, placeholder: '예) 01012341234' } }
  ];

  const guarantorFirstRow = { label: '보증인 성명', signLabel: '서명(인)', placeholder: '예) 김일신' };
  const guarantorRestRows = [
    { left: { label: '생년월일', input: true, placeholder: '예) 1990-01-01' }, right: { label: '연락처(보증인 명의 휴대폰)', input: true, placeholder: '예) 01012341234' } }
  ];
%>
<section class="vits-credit-consent">
  <h2 class="contract-main-title">개인신용 정보 수집 · 조회 · 이용 및 제공 동의서</h2>

  <!-- S: 서론 -->
  <p class="consent-intro">
    (주)일신비츠온은 상거래관계설정, 유지목적으로 [개인정보보호법] 제15조 등, [신용정보의 이용 및 보호에 관한 법률] 제
    32조 등에 따라 아래와 같이 수집·조회된 정보를 이용하는 것과 제3자에게 제공하는 것에 대하여 동의를 얻고자 합니다.
  </p>
  <!-- E: 서론 -->

  <!-- S: 동의 조항 1~5 -->
  <div class="contract-articles">
    <% consentSections.forEach(function(section) { %>
    <article class="contract-article">
      <h3 class="contract-article-head"><%= section.num %>. <%= section.title %></h3>
      <div class="contract-article-body">
        <% if (Array.isArray(section.body)) { %> <% section.body.forEach(function(p) { %>
        <p><%= p %></p>
        <% }); %> <% } else { %>
        <p><%= section.body %></p>
        <% } %>
      </div>
    </article>
    <% }); %>
  </div>
  <!-- E: 동의 조항 -->

  <!-- S: 필수 동의 [필수] -->
  <div class="consent-required">
    <p class="consent-required-question">
      위와 같이 귀하의 개인신용 정보를 수집ㆍ조회·이용 및 제공하는 것에 동의하십니까?
      <span class="consent-required-badge">[필수]</span>
    </p>
    <div class="general-table-wrap">
      <table class="general-table" summary="개인신용정보 동의">
        <!-- prettier-ignore -->
        <%- include(`${_src}/views/components/table/thead-row.ejs`, {
          caption: '개인신용정보 동의',
          columns: [
            { width: '', label: '개인(신용)정보' },
            { width: 100, label: '동의' }
          ]
        }) %>
        <tbody>
          <% consentCheckItems.forEach(function(item) { %>
          <!-- prettier-ignore -->
          <%- include(`${_src}/views/components/table/tbody-row.ejs`, {
            type: 'consent',
            srcPath: _src,
            publicPath: _public,
            label: item.label,
            id: item.id,
            name: 'consent-credit',
            value: item.id
          }) %>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
  <!-- E: 필수 동의 -->

  <!-- S: 구매자 -->
  <div class="contract-box contract-buyer">
    <h3 class="contract-box-title">구매자</h3>
    <div class="contract-info-cols">
      <dl class="contract-info-row contract-info-row-full">
        <dt><%= buyerFirstRow.label %></dt>
        <dd>
          <span class="contract-info-value"><%= buyerFirstRow.value %></span>
          <span class="contract-sign-area" title="서명 영역"><%= buyerFirstRow.signLabel %></span>
        </dd>
      </dl>
      <dl class="contract-info-col contract-info-col-left">
        <% buyerRestRows.forEach(function(row) { %>
        <div class="contract-info-row">
          <dt><%= row.left.label %></dt>
          <dd>
            <input
              type="text"
              class="contract-input contract-input-full"
              placeholder="<%= row.left.placeholder || '' %>"
            />
          </dd>
        </div>
        <% }); %>
      </dl>
      <dl class="contract-info-col contract-info-col-right">
        <% buyerRestRows.forEach(function(row) { %>
        <div class="contract-info-row">
          <dt><%= row.right.label %></dt>
          <dd>
            <input
              type="text"
              class="contract-input contract-input-full"
              placeholder="<%= row.right.placeholder || '' %>"
            />
          </dd>
        </div>
        <% }); %>
      </dl>
    </div>
  </div>
  <!-- E: 구매자 -->

  <!-- S: 보증인 -->
  <div class="contract-box contract-guarantor">
    <h3 class="contract-box-title">보증인</h3>
    <div class="contract-info-cols">
      <dl class="contract-info-row contract-info-row-full">
        <dt><%= guarantorFirstRow.label %></dt>
        <dd>
          <input
            type="text"
            class="contract-input contract-input-full"
            placeholder="<%= guarantorFirstRow.placeholder %>"
            aria-label="보증인 성명"
          />
          <span class="contract-sign-area" title="서명 영역"><%= guarantorFirstRow.signLabel %></span>
        </dd>
      </dl>
      <dl class="contract-info-col contract-info-col-left">
        <% guarantorRestRows.forEach(function(row) { %>
        <div class="contract-info-row">
          <dt><%= row.left.label %></dt>
          <dd>
            <input
              type="text"
              class="contract-input contract-input-full"
              placeholder="<%= row.left.placeholder || '' %>"
            />
          </dd>
        </div>
        <% }); %>
      </dl>
      <dl class="contract-info-col contract-info-col-right">
        <% guarantorRestRows.forEach(function(row) { %>
        <div class="contract-info-row">
          <dt><%= row.right.label %></dt>
          <dd>
            <input
              type="text"
              class="contract-input contract-input-full"
              placeholder="<%= row.right.placeholder || '' %>"
            />
          </dd>
        </div>
        <% }); %>
      </dl>
    </div>
  </div>
  <!-- E: 보증인 -->

  <!-- S: 서명 일자 -->
  <p class="contract-date-row">
    20
    <input type="text" class="contract-input contract-input-year" maxlength="2" placeholder="" aria-label="연도" /> 년
    <input type="text" class="contract-input contract-input-month" maxlength="2" placeholder="" aria-label="월" /> 월
    <input type="text" class="contract-input contract-input-day" maxlength="2" placeholder="" aria-label="일" /> 일
  </p>
  <!-- E: 서명 일자 -->
  <div class="contract-signature-submit">
    <%- include(`${_src}/views/components/button/button.ejs`, { text: '취소', variant: 'secondary' ,size: 'xxl'}) %>
    <!-- prettier-ignore -->
    <%- include(`${_src}/views/components/button/button.ejs`, { text: '서명하기', variant: 'primary' ,size: 'xxl'}) %>
  </div>
</section>
