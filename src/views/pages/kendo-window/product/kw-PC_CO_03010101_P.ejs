              <!-- prettier-ignore -->
              <%- include(`${_src}/views/components/button/button.ejs`, { size:'lg', variant: 'outline-primary', text: '쿠폰받기', iconLeft: true, iconName: 'ic-line-download' }) %>
            </div>
          </div>
