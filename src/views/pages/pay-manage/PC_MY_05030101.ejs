<% const _src = srcPath; const _public = publicPath; %>
<!DOCTYPE html>
<!--
  [D] vits-scope: 스크롤바 커스텀 범위 제한(운영 전역 scrollbar 충돌 방지)
    - 문서 스크롤 주체가 html/body로 달라질 수 있어 둘 다 클래스 적용
  -->
<html lang="ko" class="vits-scope">
  <%- include(`${_src}/views/layout/head.ejs`, {meta_title: '비츠온페이 관리'}) %>
  <!-- [D] vits-scope 적용(상단 주석 참고) -->
  <body class="vits-scope">
    <!-- S: Skip Navigation -->
    <a href="#skipNav" class="skip-nav">본문 바로가기</a>
    <!-- E: Skip Navigation -->

    <!-- S: vits-wrapper -->
    <section class="vits-wrapper">
      <%- include(`${_src}/views/layout/header.ejs`) %>

      <!-- S: vits-main -->
      <main id="skipNav" class="vits-main">
        <!-- S: vits-wrap -->
        <div class="vits-wrap">
          <!-- S: vits-grid -->
          <div class="vits-grid">
            <!-- S: vits-grid-main -->
            <div class="vits-grid-main vits-main-my-paymanage">
              <div class="vits-inner inner-column">
                <!-- 1280 컨텐츠 -->
                <div class="vits-grid-area">
                  <!-- S: vits-grid-side-left -->
                  <!-- prettier-ignore -->
                  <%- include(`${_src}/views/layout/lnb/lnb-mypage.ejs`) %>
                  <!-- E: vits-grid-side-left -->

                  <div class="vits-grid-main-content main-content-paymanage">
                    <!-- 메인 컨텐츠 -->

                    <!-- 컨텐츠 헤딩 -->
                    <div class="vits-mypage-content-headline pay-headline">
                      <h2 class="vits-mypage-content-title">비츠온페이 관리</h2>
                      <!-- prettier-ignore -->
                      <%- include(`${_src}/views/components/button/button.ejs`, { 
                        size: 'sm', 
                        variant: 'outline-tertiary', 
                        text: '결제비밀번호 설정',
                        iconLeft: true,
                        iconName: 'ic-lock-close',
                        className: 'pay-headline-link'
                      }) 
                      %>
                    </div>

                    <div class="vits-mypage-panel">
                      <!-- prettier-ignore -->
                      <%- include(`${_src}/views/components/tabs.ejs`, {
                        size: 'lg',
                        className: 'pay-tabs',
                        tabClassName: 'vits-btn-md pay-tab-btn',
                        tabs: [
                          { text: '카드 관리', isActive: true },
                          { text: '계좌 관리', isActive: false }
                        ],
                        showBadge: false,
                        ariaLabel: '비츠온페이 탭',
                        idPrefix: 'pay-tab'
                      }) %>

                      <div class="vits-mypage-panel-inner">
                        <!-- prettier-ignore -->
                        <%- include(`${_src}/views/components/button/button.ejs`, {
                          size: 'xl',
                          variant: 'secondary',
                          text: '결제수단 등록',
                          iconLeft: true,
                          iconName: 'ic-plus',
                          className: 'pay-reg-btn'
                        }) %>

                        <!-- prettier-ignore -->
                        <div class="pay-card-list" data-toggle-scope data-toggle-group="true">
                          <article class="pay-card-item">
                            <div class="pay-card-item-icon">
                              <i class="ic ic-card" aria-hidden="true"></i>
                            </div>
                            <div class="pay-card-item-body">
                              <p class="pay-card-item-name">
                                신한카드 [나만의 카드] <span class="pay-card-item-badge">대표</span>
                              </p>
                              <p class="pay-card-item-num">3318 **** **** ****</p>
                            </div>
                            <div class="pay-card-item-option-wrap">
                              <button
                                type="button"
                                class="pay-card-item-option"
                                aria-label="결제 수단 메뉴 열기"
                                data-toggle-btn
                                data-toggle-target="pay-card-menu-0"
                                data-toggle-outside="true"
                                aria-expanded="false"
                              >
                                <i class="ic ic-ellipsis" aria-hidden="true"></i>
                              </button>
                              <div class="pay-card-menu" data-toggle-box="pay-card-menu-0">
                                <p class="pay-card-menu-title">결제 수단 관리</p>
                                <ul class="pay-card-menu-list">
                                  <li>
                                    <button type="button" class="pay-card-menu-btn">
                                      <i class="ic ic-pencil" aria-hidden="true"></i>
                                      <span>정보수정</span>
                                    </button>
                                  </li>
                                  <li class="pay-card-menu-divider" role="separator"></li>
                                  <li>
                                    <button type="button" class="pay-card-menu-btn is-danger">
                                      <i class="ic ic-waste-basket" aria-hidden="true"></i>
                                      <span>삭제</span>
                                    </button>
                                  </li>
                                </ul>
                              </div>
                            </div>
                          </article>
                          <article class="pay-card-item type-account">
                            <div class="pay-card-item-icon">
                              <i class="ic ic-bank" aria-hidden="true"></i>
                            </div>
                            <div class="pay-card-item-body">
                              <p class="pay-card-item-name">
                                우리은행 [별칭]<span class="pay-card-item-badge">대표</span>
                              </p>
                              <p class="pay-card-item-num">12344145 ******</p>
                            </div>
                            <div class="pay-card-item-option-wrap">
                              <button
                                type="button"
                                class="pay-card-item-option"
                                aria-label="결제 수단 메뉴 열기"
                                data-toggle-btn
                                data-toggle-target="pay-card-menu-1"
                                data-toggle-outside="true"
                                aria-expanded="false"
                              >
                                <i class="ic ic-ellipsis" aria-hidden="true"></i>
                              </button>
                              <div class="pay-card-menu" data-toggle-box="pay-card-menu-1">
                                <p class="pay-card-menu-title">결제 수단 관리</p>
                                <ul class="pay-card-menu-list">
                                  <li>
                                    <button type="button" class="pay-card-menu-btn">
                                      <i class="ic ic-pencil" aria-hidden="true"></i>
                                      <span class="text">정보수정</span>
                                    </button>
                                  </li>
                                  <li>
                                    <button type="button" class="pay-card-menu-btn is-danger">
                                      <i class="ic ic-waste-basket" aria-hidden="true"></i>
                                      <span class="text">삭제</span>
                                    </button>
                                  </li>
                                </ul>
                              </div>
                            </div>
                          </article>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- full wide 컨텐츠 -->
            </div>
            <!-- E: vits-grid-main -->
          </div>
          <!-- E: vits-grid -->
        </div>
        <!-- E: vits-wrap -->
      </main>
      <!-- E: vits-main -->

      <%- include(`${_src}/views/layout/footer.ejs`) %>
    </section>
    <!-- E: vits-wrapper -->

    <%- include(`${_src}/views/layout/footer.links.ejs`) %>
  </body>
</html>
