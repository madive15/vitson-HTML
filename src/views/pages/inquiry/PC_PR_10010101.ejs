<% const _src = srcPath; const _public = publicPath; %>
<!DOCTYPE html>
<!--
  [D] vits-scope: 스크롤바 커스텀 범위 제한(운영 전역 scrollbar 충돌 방지)
    - 문서 스크롤 주체가 html/body로 달라질 수 있어 둘 다 클래스 적용
  -->
<html lang="ko" class="vits-scope">
  <%- include(`${_src}/views/layout/head.ejs`, {meta_title: '대량구매문의-작성'}) %>
  <!-- [D] vits-scope 적용(상단 주석 참고) -->
  <body class="vits-scope">
    <!-- S: Skip Navigation -->
    <a href="#skipNav" class="skip-nav">본문 바로가기</a>
    <!-- E: Skip Navigation -->

    <!-- S: vits-wrapper -->
    <section class="vits-wrapper">
      <%- include(`${_src}/views/layout/header.ejs`) %>

      <!-- S: vits-main -->
      <main id="skipNav" class="vits-main">
        <!-- S: vits-wrap -->
        <div class="vits-wrap">
          <!-- S: vits-grid -->
          <div class="vits-grid">
            <!-- S: vits-grid-main -->
            <div class="vits-grid-main vits-main-my-bulk">
              <div class="vits-inner inner-column">
                <!-- 1280 컨텐츠 -->
                <div class="vits-grid-area">
                  <!-- S: vits-grid-side-left -->
                  <!-- prettier-ignore -->
                  <%- include(`${_src}/views/layout/lnb/lnb-mypage.ejs`, {currentMenu: 'info-bulk'}) %>
                  <!-- E: vits-grid-side-left -->

                  <div class="vits-grid-main-content main-content-bulk">
                    <!-- 메인 컨텐츠 -->

                    <!-- 컨텐츠 헤딩 -->
                    <div class="vits-mypage-content-headline bulk-headline">
                      <h2 class="vits-mypage-content-title">대량 구매 문의</h2>
                    </div>

                    <!-- prettier-ignore -->
                    <div class="vits-mypage-panel bulk-panel inner-lg">
                      <div class="inquiry-detail">
                        <%- include(`${_src}/views/components/pg-my-support/inquiry-detail-product.ejs`) %>
                        <!-- S: 문의 작성 폼 -->
                        <div class="inquiry-write-form">
                          <!-- S: 제목 -->
                          <div class="inquiry-form-row">
                            <span class="inquiry-form-label">
                              제목 <span class="label-required" aria-hidden="true">*</span>
                            </span>
                            <div class="inquiry-form-field">
                              <!-- prettier-ignore -->
                              <%- include(`${_src}/views/components/form/input-text.ejs`, {
                                id: 'inquiry-title',
                                name: 'inquiryTitle',
                                label: '제목',
                                placeholder: '제목을 입력해주세요.',
                                required: true,
                                isInvalid: true,
                                validationMessage: '제목을 입력해주세요.',
                                rootClass: 'size-large'
                              }) %>
                            </div>
                          </div>
                          <!-- E: 제목 -->

                          <!-- S: 내용 (에디터 영역 placeholder) -->
                          <div class="inquiry-form-row">
                            <span class="inquiry-form-label">
                              내용 <span class="label-required" aria-hidden="true">*</span>
                            </span>
                            <div class="inquiry-form-field inquiry-editor-placeholder" style="border:1px solid #ddd;">
                              에디터 마크업 미적용, 영역만 표시
                            </div>
                          </div>
                          <!-- E: 내용 -->

                          <!-- S: 첨부 파일 -->
                          <div class="inquiry-form-row">
                            <span class="inquiry-form-label">첨부 파일</span>
                            <div class="inquiry-form-field">
                              <!-- prettier-ignore -->
                              <%- include(`${_src}/views/components/button/button.ejs`, {
                                type: 'button',
                                size: 'sm',
                                variant: 'secondary',
                                text: '파일 첨부하기',
                                iconLeft: true,
                                iconName: 'ic-upload'
                              }) %>
                              <p class="inquiry-form-hint">- jpg, png, gif 파일 각 5MB까지 2개 파일 업로드 가능</p>
                            </div>
                          </div>

                          <!-- [D] case 케이스 참고-->
                          <div class="inquiry-form-row">
                            <span class="inquiry-form-label">첨부 파일 (case. 첨부된 파일)</span>
                            <div class="inquiry-form-field">
                              <!-- prettier-ignore -->
                              <%- include(`${_src}/views/components/label/chip-file.ejs`, {filename: '회사 사업자 등록증.PDF'}) %>
                              <%- include(`${_src}/views/components/label/chip-file.ejs`, {filename: '인증서.PDF'}) %>
                            </div>
                          </div>
                          <!-- E: 첨부 파일 -->

                          <!-- S: 연락받으실 연락처 -->
                          <div class="inquiry-form-row">
                            <span class="inquiry-form-label">연락받으실 연락처</span>
                            <div class="inquiry-form-field">
                              <!-- prettier-ignore -->
                              <%- include(`${_src}/views/components/form/input-text.ejs`, {
                                id: 'inquiry-contact',
                                name: 'inquiryContact',
                                label: '연락받으실 연락처',
                                placeholder: '010-1234-5678',
                                rootClass: 'size-large'
                              }) %>
                            </div>
                          </div>
                          <!-- E: 연락받으실 연락처 -->
                        </div>
                        <!-- E: 문의 작성 폼 -->
                      </div>
                    </div>
                    <!-- 하단,버튼영역 -->
                    <div class="mypage-button-area in-inquiry">
                      <!-- prettier-ignore -->
                      <%- include(`${_src}/views/components/button/button.ejs`, { size: 'xl', variant: 'secondary', text: '취소' }) %>
                      <!-- prettier-ignore -->
                      <%- include(`${_src}/views/components/button/button.ejs`, { size: 'xl', variant: 'primary', text: '등록하기' }) %>
                    </div>
                  </div>
                </div>
              </div>

              <!-- full wide 컨텐츠 -->
            </div>
            <!-- E: vits-grid-main -->
          </div>
          <!-- E: vits-grid -->
        </div>
        <!-- E: vits-wrap -->
      </main>
      <!-- E: vits-main -->

      <%- include(`${_src}/views/layout/footer.ejs`) %>
    </section>
    <!-- E: vits-wrapper -->

    <%- include(`${_src}/views/layout/footer.links.ejs`) %>

    <script>
      (function () {})();
    </script>
  </body>
</html>
