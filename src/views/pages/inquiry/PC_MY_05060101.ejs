<% const _src = srcPath; const _public = publicPath; %>
<!DOCTYPE html>
<!--
  [D] vits-scope: 스크롤바 커스텀 범위 제한(운영 전역 scrollbar 충돌 방지)
    - 문서 스크롤 주체가 html/body로 달라질 수 있어 둘 다 클래스 적용
  -->
<html lang="ko" class="vits-scope">
  <%- include(`${_src}/views/layout/head.ejs`, {meta_title: '대량구매문의-목록조회'}) %>
  <!-- [D] vits-scope 적용(상단 주석 참고) -->
  <body class="vits-scope">
    <!-- S: Skip Navigation -->
    <a href="#skipNav" class="skip-nav">본문 바로가기</a>
    <!-- E: Skip Navigation -->

    <!-- S: vits-wrapper -->
    <section class="vits-wrapper">
      <%- include(`${_src}/views/layout/header.ejs`) %>

      <!-- S: vits-main -->
      <main id="skipNav" class="vits-main">
        <!-- S: vits-wrap -->
        <div class="vits-wrap">
          <!-- S: vits-grid -->
          <div class="vits-grid">
            <!-- S: vits-grid-main -->
            <div class="vits-grid-main vits-main-my-bulk">
              <div class="vits-inner inner-column">
                <!-- 1280 컨텐츠 -->
                <div class="vits-grid-area">
                  <!-- S: vits-grid-side-left -->
                  <!-- prettier-ignore -->
                  <%- include(`${_src}/views/layout/lnb/lnb-mypage.ejs`, {currentMenu: 'info-bulk'}) %>
                  <!-- E: vits-grid-side-left -->

                  <div class="vits-grid-main-content main-content-bulk">
                    <!-- 메인 컨텐츠 -->

                    <!-- 컨텐츠 헤딩 -->
                    <div class="vits-mypage-content-headline bulk-headline">
                      <h2 class="vits-mypage-content-title">대량 구매 문의</h2>
                    </div>

                    <div class="vits-mypage-panel bulk-panel">
                      <!-- prettier-ignore -->
                      <%- include(`${_src}/views/components/pg-my-support/support-filter.ejs`, { srcPath: _src, publicPath: _public, type: 'bulk' }) %>
                      <!-- 목록 테이블 -->
                      <div class="general-table-wrap">
                        <table class="general-table" summary="대량구매문의 목록">
                          <!-- prettier-ignore -->
                          <%- include(`${_src}/views/components/table/thead-row.ejs`, {
                            caption: '대량구매문의 목록',
                            columns: [
                              { width: 80, label: '순번' },
                              { width: 300, label: '상품정보' },
                              { width: 250, label: '제목' },
                              { width: 100, label: '문의상태' },
                              { width: 150, label: '작성일' },
                            ]
                          }) %>

                          <tbody>
                            <!-- prettier-ignore -->
                            <%- include(`${_src}/views/components/table/tbody-row.ejs`, {
                              type: 'bulk',
                              srcPath: _src,
                              rowIndex: 2,
                              productInfo: '[46156] 2단 원통파 A타입(싱글락)(A)',
                              title: '단가 확인 요청드립니다.',
                              status: '답변대기',
                              date: '2026-02-06'
                            }) %>
                            <!-- prettier-ignore -->
                            <%- include(`${_src}/views/components/table/tbody-row.ejs`, {
                              type: 'bulk',
                              srcPath: _src,
                              rowIndex: 1,
                              productInfo: '[46156] 2단 원통파 A타입',
                              title: '단가 확인 요청드립니다.',
                              status: '답변완료',
                              date: '2026-02-06'
                            }) %>
                          </tbody>
                        </table>
                      </div>

                      <!-- 페이지네이션 -->
                      <!-- prettier-ignore -->
                      <div class="vits-mypage-pagination">
                        <!-- prettier-ignore -->
                        <%- include(`${_src}/views/components/pagination.ejs`, {
                          type: 'default',
                          current: 1,
                          isPrevDisabled: true
                        }) %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- full wide 컨텐츠 -->
            </div>
            <!-- E: vits-grid-main -->
          </div>
          <!-- E: vits-grid -->
        </div>
        <!-- E: vits-wrap -->
      </main>
      <!-- E: vits-main -->

      <%- include(`${_src}/views/layout/footer.ejs`) %>
    </section>
    <!-- E: vits-wrapper -->

    <%- include(`${_src}/views/layout/footer.links.ejs`) %>

    <script>
      (function () {})();
    </script>
  </body>
</html>
