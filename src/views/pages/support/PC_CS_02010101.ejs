<% const _src = srcPath; const _public = publicPath; %>

<!DOCTYPE html>
<!--
  [D] vits-scope: 스크롤바 커스텀 범위 제한(운영 전역 scrollbar 충돌 방지)
    - 문서 스크롤 주체가 html/body로 달라질 수 있어 둘 다 클래스 적용
  -->
<html lang="ko" class="vits-scope">
  <%- include(`${_src}/views/layout/head.ejs`, {meta_title: 'FAQ 목록'}) %>
  <!-- [D] vits-scope 적용(상단 주석 참고) -->
  <body class="vits-scope">
    <!-- S: Skip Navigation -->
    <a href="#skipNav" class="skip-nav">본문 바로가기</a>
    <!-- E: Skip Navigation -->

    <!-- S: vits-wrapper -->
    <section class="vits-wrapper">
      <%- include(`${_src}/views/layout/header.ejs`) %>

      <!-- S: vits-main -->
      <main id="skipNav" class="vits-main">
        <!-- S: vits-wrap -->
        <div class="vits-wrap">
          <!-- S: vits-grid -->
          <div class="vits-grid">
            <!-- S: vits-grid-main -->
            <div class="vits-grid-main vits-main-support-faq">
              <div class="vits-inner inner-column">
                <!-- 1280 컨텐츠 -->
                <div class="vits-grid-area">
                  <!-- S: vits-grid-side-left -->
                  <!-- prettier-ignore -->
                  <%- include(`${_src}/views/layout/lnb/lnb-support.ejs`, {currentMenu: 'faq'}) %>
                  <!-- E: vits-grid-side-left -->

                  <div class="vits-grid-main-content main-content-faq">
                    <!-- 메인 컨텐츠 -->

                    <!-- 컨텐츠 헤딩 -->
                    <div class="vits-support-content-headline faq-headline">
                      <h2 class="vits-support-content-title">FAQ</h2>
                    </div>
                    <!-- 검색하기 패널 -->
                    <%- include(`${_src}/views/components/pg-my-support/support-toolbar.ejs`, { srcPath: _src,
                    publicPath: _public, type: 'justSearch' }) %>

                    <div class="vits-support-panel faq-panel inner-lg">
                      <!-- swiper 기능을 가진 탭 버튼 -->
                      <!-- prettier-ignore -->
                      <%
                      const faqTabList = ['전체', '회원', '상품', '주문', '결제', '배송/반품/교환'];
                      %>
                      <div class="vits-support-tabs swiper js-swiper" data-swiper-type="faqTab">
                        <div class="swiper-wrapper">
                          <% faqTabList.forEach(function(label, index) { %>
                          <div class="swiper-slide">
                            <button type="button" class="support-tab<%= index === 0 ? ' support-tab-active' : '' %>">
                              <%= label %>
                            </button>
                          </div>
                          <% }); %>
                        </div>
                        <div class="vits-swiper-navs">
                          <div class="swiper-button-prev"></div>
                          <div class="swiper-button-next"></div>
                        </div>
                      </div>
                      <!-- prettier-ignore -->
                      <%
                      const faqList = [
                        { category: '회원', question: '주문이 잘 되었는지 확인하고 싶어요.', answer: '주문하신 상품은 평균 2~3일 내에 배송됩니다.\n 배송상황은 마이페이지 내에서 확인하실 수 있습니다.' },
                        { category: '결제', question: '교환 금액은 언제 입금되나요?', answer: '교환 완료 후 영업일 기준 3~5일 내에 입금됩니다.' },
                        { category: '상품', question: '찾는 상품이 없으면 구매대행 가능한가요?', answer: '구매대행 문의는 고객센터로 요청해 주시면 안내해 드립니다.' },
                        { category: '배송/반품/교환', question: '배송 예정일이 언제쯤 되나요?', answer: '주문하신 상품은 평균 2~3일 내에 배송됩니다.\n 배송상황은 마이페이지 내에서 확인하실 수 있습니다.' },
                        { category: '배송/반품/교환', question: '반품 신청은 어떻게 해야하나요?', answer: '마이페이지 &gt; 주문/배송 내역에서 반품 신청을 진행하실 수 있습니다.' }
                      ];
                      %>
                      <!-- prettier-ignore -->
                      <div class="vits-faq-list-wrap" data-toggle-scope data-toggle-group="true">
                        <dl class="vits-faq-list">
                          <% faqList.forEach(function(item, index) {
                            const id = 'faq-answer-' + (index + 1);
                            const questionId = 'faq-question-' + (index + 1);
                          %>
                          <div class="faq-item">
                            <dt class="faq-question-wrap">
                              <button type="button" class="faq-question" data-toggle-btn data-toggle-target="<%= id %>" aria-expanded="false" aria-controls="<%= id %>" id="<%= questionId %>">
                                <%- include(`${_src}/views/components/label/general-label.ejs`, { text: item.category, variant: 'sunken' }) %>
                                <span class="faq-question-text"><%= item.question %></span>
                                <span class="icon" aria-hidden="true"><%- include(`${_src}/views/components/icon.ejs`, { iconName: 'arrow-down' }) %></span>
                              </button>
                            </dt>
                            <dd id="<%= id %>" class="faq-answer-wrap"  aria-labelledby="<%= questionId %>" data-toggle-box="<%= id %>">
                              <div class="faq-answer"><%- item.answer %></div>
                            </dd>
                          </div>
                          <% }); %>
                        </dl>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- full wide 컨텐츠 -->
            </div>
            <!-- E: vits-grid-main -->
          </div>
          <!-- E: vits-grid -->
        </div>
        <!-- E: vits-wrap -->
      </main>
      <!-- E: vits-main -->

      <%- include(`${_src}/views/layout/footer.ejs`) %>
    </section>
    <!-- E: vits-wrapper -->

    <%- include(`${_src}/views/layout/footer.links.ejs`) %>

    <script>
      (function () {})();
    </script>
  </body>
</html>
