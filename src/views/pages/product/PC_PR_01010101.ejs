<% const _src = srcPath; const _public = publicPath; %>
<!DOCTYPE html>
<!-- 
  [D] vits-scope: 스크롤바 커스텀 범위 제한(운영 전역 scrollbar 충돌 방지)
    - 문서 스크롤 주체가 html/body로 달라질 수 있어 둘 다 클래스 적용 
  -->
<html lang="ko" class="vits-scope">
  <%- include(`${_src}/views/layout/head.ejs`, {meta_title: '상품상세 PC_PR_01010101'}) %>
  <!-- [D] vits-scope 적용(상단 주석 참고) -->
  <body class="vits-scope">
    <!-- S: Skip Navigation -->
    <a href="#skipNav" class="skip-nav">본문 바로가기</a>
    <!-- E: Skip Navigation -->

    <!-- S: vits-wrapper -->
    <section class="vits-wrapper">
      <%- include(`${_src}/views/layout/header.ejs`) %>

      <!-- S: vits-main -->
      <main id="skipNav" class="vits-main">
        <!-- S: vits-wrap -->
        <div class="vits-wrap">
          <!-- S: vits-grid -->
          <div class="vits-grid">
            <!-- S: vits-grid-side-left -->
            <!-- <aside class="vits-grid-side vits-grid-side-left"></aside> -->
            <!-- E: vits-grid-side-left -->

            <!-- S: vits-grid-main -->
            <div class="vits-grid-main vits-wrapper-product">
              <!-- 메인 컨텐츠 -->
              <!-- s: PC_PR_01010101 -->
              <div class="vits-" style="background-color: red; height: 50px">BreadScrumb + 상품코드 영역</div>
              <div class="vits-product-detail-container">
                <div class="vits-deal-view">
                  <%- include(`${_src}/views/components/pg/vits-deal-gallery`) %>

                  <div class="vits-deal-info">
                    <div class="vits-deal-info-inner">
                      <div class="product-brand-name">비츠온<i class="ic ic-arrow-right"></i></div>
                      <div class="product-name-info">
                        <!-- 상위분류명 +상품 이름 + 좋아요 + 라벨 -->
                        <ul class="info-inner">
                          <li>
                            <div class="product-name">
                              팬던트 LED 팬던트 LED 팬던트 LED 제품명이 1줄일 경우 2줄일 경우 아래로 늘어남
                            </div>
                            <div class="vits-product-chips">
                              <!-- prettier-ignore -->
                              <%
                                const productChips = [
                                  { text: '오늘출발', icon: 'ic-lightning' },
                                  { text: '내일출발', icon: null },
                                  { text: '롯데택배불가', icon: null }
                                ];
                              %>
                              <% productChips.forEach(label => { %>
                              <button type="button" class="vits-label-chip<%= label.icon ? ' icon' : '' %>">
                                <% if (label.icon) { %><i class="ic <%= label.icon %>"></i><% } %><%= label.text %>
                              </button>
                              <% }); %>
                            </div>
                          </li>
                          <li>
                            <label for="like" class="vits-btn like-btn icon">
                              <input type="checkbox" name="like" id="like" aria-label="좋아요버튼" />
                              <i class="ic ic-heart"></i>
                            </label>
                          </li>
                        </ul>
                      </div>
                      <div class="product-price-info">
                        <ul class="info-inner">
                          <li>
                            <div class="original">
                              <p><span>32,000</span><span class="won">원</span></p>
                            </div>
                            <div class="discount">
                              <p class="discount-rate"><span>48</span><span class="per">%</span></p>
                              <p class="discount-price"><span>39,400</span><span class="won">원</span></p>
                            </div>

                            <div class="delivery-benefit">
                              <p><i class="ic ic-lightning"></i><span class="unit">1</span>개만 사도 무료배송</p>
                            </div>
                          </li>
                          <li>
                            <div class="discount-coupon">
                              <button type="button" class="vits-btn-horizon left-icon">
                                <span class="icon"><i class="ic ic-lightning"></i></span
                                ><span class="text">할인쿠폰받기</span>
                              </button>
                            </div>
                          </li>
                        </ul>
                      </div>
                      <div class="product-minidetail">
                        <!-- prettier-ignore -->
                        <%
                          const productMiniDetailInfo = [
                            { label: '과세구분:', value: '과세' },
                            { label: '출고단위:', value: '개' },
                            { label: '모델명:', value: 'DL30040 36W 화이트 주백 KS DL30040 모델명이 2줄일 경우 예시' },
                            { label: '중량(kg):', value: '1kg' }
                          ];
                        %>
                        <ul class="info-inner">
                          <% productMiniDetailInfo.forEach(item => { %>
                          <li>
                            <span class="label"><%= item.label %></span><span class="value"><%= item.value %></span>
                          </li>
                          <% }); %>
                        </ul>
                      </div>
                      <!-- case 01 : 수량선택 (낱개 + 대포장) -->
                      <div class="product-select-quick">
                        <ul class="info-inner">
                          <li>
                            <h3 class="title">수량선택</h3>
                            <div class="option-list">
                              <ul>
                                <li class="option-item">
                                  <label>
                                    <input type="radio" name="package" value="single" checked />
                                    <span class="option-text">
                                      <span class="name">낱개 <em>(1)</em></span>
                                      <span class="price">₩4,150</span>
                                    </span>
                                  </label>
                                </li>

                                <li class="option-item">
                                  <label>
                                    <input type="radio" name="package" value="box" />
                                    <span class="option-text">
                                      <span class="name">대포장 <em>(250)</em></span>
                                      <span class="price">₩103,750</span>
                                    </span>
                                  </label>
                                </li>
                              </ul>
                            </div>
                          </li>
                          <li>
                            <button type="button" class="vits-btn-horizon left-icon">
                              <span class="icon"><i class="ic ic-lightning"></i></span>
                              <span class="text">단가할인</span>
                            </button>
                          </li>
                        </ul>
                      </div>
                      <!-- case 02 :주문길이 입력 -->
                      <div class="product-select-unit">
                        <ul class="info-inner">
                          <li>
                            <div class="vits-input-unit">
                              <label class="input-label">
                                <span class="text">주문 길이</span>
                                <span class="input-unit">
                                  <input type="text" value="" placeholder="0" />
                                  <em>M</em>
                                </span>
                              </label>
                              <button type="button" class="vits-btn-horizon none-icon">
                                <span class="text">추가</span>
                              </button>
                            </div>
                          </li>
                        </ul>
                      </div>
                      <div class="product-select-options">
                        <!-- 옵션 버튼 (옵션 우측 슬라이드 팝업) -->
                        <div class="vits-btn-option">
                          <button type="button" class="vits-btn-horizon right-icon">
                            <span class="text">다른 규격 찾기 (전체 <em>84</em>개 옵션)</span
                            ><span class="icon"><i class="ic ic-arrow-right"></i></span>
                          </button>
                        </div>
                      </div>
                      <div class="product-select-result">
                        <!-- 상품선택 결과 영역 -->
                        <div class="select-result-item">
                          <div class="prd-code">상품코드: <span class="code">1234567890</span></div>
                          <div class="prd-name">[일반전선] VCTF</div>
                          <div class="prd-size">1.5SQ * 3C(100M)</div>

                          <div class="prd-group-row">
                            <div class="prd-input-count">
                              <div class="vits-count-box">
                                <div class="quantity-control type-horiz">
                                  <button type="button" class="btn-step vits-minus-icon" aria-label="감소">
                                    <i class="ic ic-minus"></i>
                                  </button>

                                  <input
                                    type="number"
                                    class="quantity-input"
                                    value="999"
                                    min="1"
                                    step="1"
                                    aria-label="개수"
                                  />

                                  <span class="unit">BOX</span>

                                  <button type="button" class="btn-step vits-plus-icon" aria-label="증가">
                                    <i class="ic ic-plus"></i>
                                  </button>
                                </div>

                                <div class="quantity-control type-vertical">
                                  <input
                                    type="number"
                                    class="quantity-input"
                                    value="1"
                                    min="1"
                                    step="1"
                                    aria-label="단위"
                                  />

                                  <span class="unit">M</span>

                                  <button type="button" class="btn-step vits-plus-icon" aria-label="증가">
                                    <i class="ic ic-arrow-up"></i>
                                  </button>
                                  <button type="button" class="btn-step vits-minus-icon" aria-label="감소">
                                    <i class="ic ic-arrow-down"></i>
                                  </button>
                                </div>
                              </div>
                            </div>

                            <div class="prd-single-price">
                              <span class="txt">쿠폰 적용가</span><span class="price">800,000</span
                              ><span class="won">원</span>
                            </div>
                            <button type="button" class="vits-btn-close icon"><i class="ic ic-x">닫기</i></button>
                          </div>
                        </div>
                      </div>
                      <div class="product-total-praice">최종 결과 금액</div>
                    </div>
                  </div>
                </div>
                <div class="vits-swiper-container" style="height: 400px; background-color: blue">
                  스와이퍼 영역 / MD가 꼼꼼히 고른 추천 상품
                </div>
                <div class="vits-deal-detail">
                  <div style="height: 100px; background: fuchsia; position: sticky; top: 0; z-index: 9999">
                    스티키 + 탭 data-name
                  </div>
                  <div style="height: 1200px; background: green">
                    <div class="vits-tab-area">상세내용</div>
                    <div class="vits-tab-area">제원정보 및 고시정보</div>
                    <div class="vits-tab-area">
                      관련 및 연관상품
                      <div class="vits-swiper-container" style="height: 400px; background-color: blue">
                        스와이퍼 영역 / MD가 꼼꼼히 고른 추천 상품
                      </div>
                      <div class="vits-swiper-container" style="height: 400px; background-color: blue">
                        스와이퍼 영역 / MD가 꼼꼼히 고른 추천 상품
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <!-- e: PC_PR_01010101 -->
            </div>
            <!-- E: vits-grid-main -->

            <!-- S: vits-grid-right -->
            <!-- <aside class="vits-grid-side vits-grid-side-right"></aside> -->
            <!-- E: vits-grid-right -->
          </div>
          <!-- E: vits-grid -->
        </div>
        <!-- E: vits-wrap -->
      </main>
      <!-- E: vits-main -->

      <%- include(`${_src}/views/layout/footer.ejs`) %>
    </section>
    <!-- E: vits-wrapper -->
    <%- include(`${_src}/views/layout/footer.links.ejs`) %>

    <!-- Deal Gallery  -->
  </body>
</html>
