<% const _src = srcPath; const _public = publicPath; %>
<!-- 아이디 찾기 폼 (탭)
PC_LO_02010101 (ID찾기_휴대전화번호로 찾기) 
PC_LO_02020101 (ID찾기_이메일로 찾기) 
PC_LO_02030101 (ID찾기_사업자등록번호로 찾기)
-->

<div class="info-find-block info-find-block-id" hidden>
  <div class="vits-signup-headline">
    <h2 class="vits-signup-title">아이디 찾기</h2>
  </div>

  <!-- prettier-ignore -->
  <% const idFindTabs = [
    { text: '휴대전화번호', isActive: true },
    { text: '이메일', isActive: false },
    { text: '사업자등록번호', isActive: false }
  ]; %>
  <div class="info-find-tabs-wrap">
    <!-- prettier-ignore -->
    <%- include(`${_src}/views/components/tabs.ejs`, {
      size: 'sm',
      className: 'vits-auth-tabs',
      tabClassName: 'vits-btn-md info-find-tab-btn',
      tabs: idFindTabs,
      showBadge: false,
      ariaLabel: '아이디 찾기 방법',
      idPrefix: 'info-find-tab'
    }) %>
  </div>

  <form class="info-find-form" action="#" method="post">
    <div class="vits-login-form-fields" aria-hidden="false">
      <!-- prettier-ignore -->
      <%- include(`${_src}/views/components/form/input-text.ejs`, {
        id: 'id-find-name-phone',
        name: 'userName',
        label: '이름',
        placeholder: '이름',
        required: true,
        rootClass: 'size-large',
      }) %>
      <!-- prettier-ignore -->
      <%- include(`${_src}/views/components/form/input-text.ejs`, {
        id: 'id-find-phone',
        name: 'userPhone',
        label: '휴대전화번호',
        placeholder: '휴대전화번호',
        required: true,
        rootClass: 'size-large',
      }) %>
    </div>
    <div class="vits-login-form-fields" aria-hidden="true">
      <!-- prettier-ignore -->
      <%- include(`${_src}/views/components/form/input-text.ejs`, {
        id: 'id-find-name-email',
        name: 'userNameEmail',
        label: '이름',
        placeholder: '이름',
        required: true,
        rootClass: 'size-large',
      }) %>
      <!-- prettier-ignore -->
      <%- include(`${_src}/views/components/form/input-text.ejs`, {
        id: 'id-find-email',
        name: 'userEmail',
        label: '이메일 주소',
        placeholder: '이메일 주소',
        required: true,
        rootClass: 'size-large',
      }) %>
    </div>
    <div class="vits-login-form-fields" aria-hidden="true">
      <!-- prettier-ignore -->
      <%- include(`${_src}/views/components/form/input-text.ejs`, {
        id: 'id-find-rep-name',
        name: 'repName',
        label: '대표자 이름',
        placeholder: '대표자 이름',
        required: true,
        rootClass: 'size-large',
      }) %>
      <!-- prettier-ignore -->
      <%- include(`${_src}/views/components/form/input-text.ejs`, {
        id: 'id-find-biz-no',
        name: 'bizNo',
        label: '사업자등록번호',
        placeholder: '사업자등록번호',
        required: true,
        rootClass: 'size-large',
      }) %>
    </div>

    <div class="info-find-form-actions">
      <!-- prettier-ignore -->
      <%- include(`${_src}/views/components/button/button.ejs`, {
        type: 'submit',
        size: 'xl',
        variant: 'primary',
        text: '아이디 찾기',
        className: 'info-find-btn',
      }) %>
    </div>

    <!-- S: 하단 링크 -->
    <!-- prettier-ignore -->
    <%- include(`${_src}/views/components/pg-auth/login-links.ejs`, {
      links: [
        { href: '#!', label: '비밀번호 찾기' },
        { href: '#!', label: '회원가입' },
      ],
    }) %>
    <!-- E: 하단 링크 -->
  </form>
</div>
