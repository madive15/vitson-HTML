<% if (actionTarget === 'full') { %>
<button type="button" class="vits-label-chip vits-label-chip-action"><%= name %></button>
<% } else if (actionTarget === 'x') { %>
<div class="vits-label-chip vits-label-chip-close">
  <span><%= name %></span>
  <button type="button" class="vits-label-chip-x">×</button>
</div>
<% } %>

