<% const _src = srcPath; const _public = publicPath; %>
<!-- prettier-ignore -->
<%
  /*
    vits-product-flags
    - 상품 속성(오늘출발/내일출발/특가) 칩 출력
    - true인 항목만 렌더링
    - 전부 false면 아무것도 출력하지 않음

    include params:
    - today: boolean
    - tomorrow: boolean
    - hot: boolean
  */
  const showToday = today === true;
  const showTomorrow = tomorrow === true;
  const showHot = hot === true;
  const hasAny = showToday || showTomorrow || showHot;
%>

<% if (hasAny) { %>
<div class="vits-product-flags">
  <% if (showToday) { %>
  <span class="vits-product-flag is-today">
    <span class="icon"> <%- include(`${_src}/views/components/icon.ejs`, { iconName: 'lightning' }) %> </span>
    오늘출발
  </span>
  <% } %> <% if (showTomorrow) { %>
  <span class="vits-product-flag is-tomorrow">내일출발</span>
  <% } %> <% if (showHot) { %>
  <span class="vits-product-flag is-hot">특가</span>
  <% } %>
</div>
<% } %>
