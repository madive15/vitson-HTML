<% const _src = srcPath; const _public = publicPath; %>

<!-- prettier-ignore -->
<%
  const bannerItems = [
    { image: '/resources/img/mro/renewal/temp/temp-pc_main_banner1.jpg', href: '#!' },
    { image: '/resources/img/mro/renewal/temp/temp-pc_main_banner2.jpg', href: '#!' },
    { image: '/resources/img/mro/renewal/temp/temp-pc_main_banner3.jpg', href: '#!' },
    { image: '/resources/img/mro/renewal/temp/temp-pc_main_banner4.jpg', href: '#!' },
    { image: '/resources/img/mro/renewal/temp/temp-pc_main_banner5.jpg', href: '#!' },
    { image: '/resources/img/mro/renewal/temp/temp-pc_main_banner6.jpg', href: '#!' },
  ];
%>

<!-- 메인 배너 -->
<div class="vits-home-main-banner">
  <div class="main-banner-container js-home-main-banner-swiper">
    <div class="swiper-wrapper">
      <% bannerItems.forEach((item) => { %>
      <div class="swiper-slide">
        <div class="main-banner-card">
          <div class="banner-card-content">
            <a href="<%= item.href %>">
              <% if (item.image) { %>
              <div class="banner-card-image">
                <img src="<%= _public %><%= item.image %>" alt="베너이미지 설명" />
              </div>
              <% } %>
            </a>
          </div>
        </div>
      </div>
      <% }); %>
    </div>

    <!-- 진행 바, 재생/멈춤, 이전/다음 -->
    <div class="main-banner-progress">
      <div class="banner-pagination-bar"></div>
      <div class="main-banner-navs">
        <button type="button" class="banner-nav-button banner-nav-prev" aria-label="이전 배너">
          <span class="sr-only">이전</span>
          <%- include(`${_src}/views/components/icon.ejs`, { iconName: 'arrow-left' }) %>
        </button>
        <button type="button" class="banner-nav-button banner-nav-next" aria-label="다음 배너">
          <span class="sr-only">다음</span>
          <%- include(`${_src}/views/components/icon.ejs`, { iconName: 'arrow-right' }) %>
        </button>
      </div>
      <div class="banner-progress-actions">
        <button
          type="button"
          class="banner-progress-btn banner-progress-toggle is-paused"
          aria-label="재생"
          aria-pressed="false"
          title="재생"
        >
          <span class="sr-only">재생</span>
          <span class="banner-progress-icon-play">
            <%- include(`${_src}/views/components/icon.ejs`, { iconName: 'play' }) %>
          </span>
          <span class="banner-progress-icon-pause">
            <%- include(`${_src}/views/components/icon.ejs`, { iconName: 'pause' }) %>
          </span>
        </button>
      </div>
    </div>
  </div>
</div>
