<% const _src = srcPath; const _public = publicPath; %>
<!-- prettier-ignore -->
<%
  // 'frequent' (자주구매) | 'like' (좋아요) | 'like-list' (좋아요 상품목록) | 'folder' (폴더)
  const _pageType = typeof pageType !== 'undefined' ? pageType : 'frequent';
  
  // 상품 페이지 여부 (별도 변수)
  const _isProduct = typeof isProduct !== 'undefined' ? isProduct : true;
  
  // 페이지 사이즈 옵션
  const pageSizeOptions = _isProduct
    ? [
        { value: '20', text: '20개씩 보기' },
        { value: '40', text: '40개씩 보기' },
        { value: '60', text: '60개씩 보기' },
      ]
    : [
        { value: '10', text: '10개씩 보기' },
        { value: '20', text: '20개씩 보기' },
        { value: '30', text: '30개씩 보기' },
      ];
  
  const defaultPageSize = _isProduct ? '20' : '10';
%>

<div class="vits-mypage-favorites-meta type-<%= _pageType %>">
  <p class="meta-count">총<b>3</b>개</p>

  <div class="meta-page-size">
    <!-- prettier-ignore -->
    <%- include(`${_src}/views/components/form/select.ejs`, {
        id: 'page-size',
        name: 'pageSize',
        placeholder: pageSizeOptions[0].text,
        options: pageSizeOptions,
        value: (typeof pageSize !== 'undefined' && pageSize !== null) ? String(pageSize) : defaultPageSize,
        disabled: false,
        className: 'type-ghost color-secondary'
      }) %>
  </div>

  <% if (_pageType === 'frequent') { %>
  <div class="meta-sort">
    <!-- prettier-ignore -->
    <%- include(`${_src}/views/components/form/select.ejs`, {
      id: 'list-sort',
      name: 'sort',
      placeholder: '정렬 선택',
      options: [
        { value: '자주 구매순', text: '자주 구매순' },
        { value: '최근 구매순', text: '최근 구매순' },
      ],
      value: (typeof sort !== 'undefined' && sort !== null) ? String(sort) : '자주 구매순',
      disabled: false
    }) %>
  </div>

  <div class="meta-view">
    <button type="button" class="view-button view-thumb" aria-label="리스트형 전환" data-plp-view-toggle>
      <i class="ic"></i>
    </button>
  </div>
  <% } %>
</div>
