<button class="vits-btn vits-btn-<%= size %> <%= icon ? 'vits-btn-icon-' + iconPosition : '' %>">
  <% if (icon && iconPosition === 'left') { %>
  <i class="icon-<%= icon %>"></i>
  <% } %>
  <span><%= label %></span>
  <% if (icon && iconPosition === 'right') { %>
  <i class="icon-<%= icon %>"></i>
  <% } %>
</button>

