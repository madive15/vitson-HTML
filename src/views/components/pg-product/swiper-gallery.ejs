<div class="vits-deal-gallery">
  <div class="pd-gallery" data-test-gallery>
    <div class="pd-gallery-main">
      <div class="swiper pd-main-swiper" data-main-swiper>
        <div class="swiper-wrapper" data-main-wrapper>
          <div class="swiper-slide">
            <div class="pd-iframe" data-main-iframe>
              <iframe
                src="https://vitsonimg.co.kr/images/dev/productsNew/501/orbitvu/501501/501501.html"
                width="100%"
                height="600"
                scrolling="no"
                marginwidth="0"
                marginheight="0"
                frameborder="0"
                vspace="0"
                hspace="0"
                allow="fullscreen"
                webkitallowfullscreen=""
                mozallowfullscreen=""
                allowfullscreen=""
              ></iframe>
            </div>
          </div>
          <% galleryImages.forEach(function(image, idx) { %>
          <div class="swiper-slide">
            <img src="<%= image.src %>" alt="<%= image.alt %>" data-main-img />
          </div>
          <% }); %>
        </div>
        <button type="button" class="pd-nav pd-nav-prev" aria-label="이전 이미지" data-main-prev></button>
        <button type="button" class="pd-nav pd-nav-next" aria-label="다음 이미지" data-main-next></button>
      </div>

      <aside class="pd-zoom" data-zoom aria-hidden="true">
        <img data-zoom-img alt="" />
      </aside>
    </div>

    <div class="pd-gallery-thumbs">
      <div class="pd-thumbs-area">
        <button type="button" class="pd-thumb-nav pd-thumb-prev" aria-label="썸네일 이전" data-thumbs-prev></button>
        <button type="button" class="pd-thumb-nav pd-thumb-next" aria-label="썸네일 다음" data-thumbs-next></button>

        <div class="swiper pd-thumbs-swiper" data-thumbs-swiper>
          <div class="swiper-wrapper" data-thumbs-wrapper>
            <button type="button" class="swiper-slide pd-thumb" data-thumb data-index="0" aria-label="썸네일 1 선택">
              <img
                src="https://vitsonimg.co.kr/images/dev/productsNew/501/orbitvu/501501/images/a_0_0_1000_0_0.jpg"
                alt="360도 보기"
              />
              <!--360도 이미지 일 경우 라벨 표시 -->
              <span class="thumb-label">360°</span>
            </button>
            <% galleryImages.forEach(function(image, idx) { %>
            <button
              type="button"
              class="swiper-slide pd-thumb"
              data-thumb
              data-index="<%= idx + 1 %>"
              aria-label="썸네일 <%= idx + 2 %> 선택"
            >
              <img src="<%= image.src %>" alt="" />
            </button>
            <% }); %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="vits-description-box">
    <div class="vits-scrollbar">
      <div class="content-text">
*제품특징

*제품용도
