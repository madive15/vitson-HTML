        <li>
          <p class="mypage-query-label">취소/반품 선택</p>
          <div class="mypage-query-control type-select">
            <!-- prettier-ignore -->
            <%- include(`${_src}/views/components/form/select.ejs`, {
            id: 'my-order-status',
            name: 'sort',
            placeholder: '전체',
            options: [
              { value: '전체', text: '전체' },
              { value: '취소', text: '취소' },
              { value: '반품', text: '반품' },
            ],
            value: (typeof sort !== 'undefined' && sort !== null) ? String(sort) : '전체',
            disabled: false,
            portal: true,
          }) %>
          </div>
        </li>
        <% } %>

        <!-- 검색어 -->
        <li>
          <p class="mypage-query-label">검색어</p>
          <div class="mypage-query-control type-search">
            <!-- prettier-ignore -->
            <%- include(`${_src}/views/components/form/input-search.ejs`, {
              idPrefix: 'my-orders-search',
              action: '/orders-search',
              name: 'my-orders-search',
              placeholder: '상품명, 주문번호 검색',
              addClassName: 'size-sm'
            }) %>
          </div>
        </li>
      </ul>
    </div>
  </div>

  <!-- 상세조회 & 조회하기 버튼 -->
  <div class="mypage-query-actions">
    <!-- 26-02-13 상세조회 -> 초기화 변경 -->
    <button type="button" type="button" class="mypage-query-reset">
      <span class="icon"> <%- include(`${_src}/views/components/icon.ejs`, { iconName: 'undo' }) %> </span>
      <span class="text">초기화</span>
    </button>
    <%- include(`${_src}/views/components/button/button.ejs`, {size:'sm', variant: 'secondary', text: '조회하기',
    disabled: true, className: 'btn-fix-w120'}) %>
  </div>
</div>

