<% const _src = srcPath; const _public = publicPath; %>
<div id="vits-deal-detail" class="vits-deal-detail">
  <div class="tab-wrap">
    <!-- s: 가격정보 - 초기값은 height 0 으로 비노출 / 스크롤 tpop:0일때 노출 is-open (tab-scrollbar.js 에서 관리)-->
    <div class="tab-show-price">
      <ul class="info-inner">
        <li>
          <div class="product-name">
            팬던트 LED 팬던트 LED 팬던트 LED 제품명이 2줄일 경우 시안처럼 노출됩니다 제품명이 2줄일 경우 시안처럼
            노출됩니다
          </div>
        </li>
        <li>
          <div class="product-price">
            <div class="original">
              <p><span>32,000</span><span class="won">원</span></p>
            </div>
            <div class="calculated-price">
              <p class="rate"><span>48</span><span class="per">%</span></p>
              <p class="price"><span>39,400</span><span class="won">원</span></p>
            </div>
          </div>
          <div class="product-order-buttons">
            <div class="btn-buy">
              <!-- prettier-ignore -->
              <%- include(`${_src}/views/components/button/button.ejs`,{size:'lg', variant: 'secondary',
              text: '바로구매' }) %>
            </div>
            <div class="btn-cart">
              <!-- prettier-ignore -->
              <%- include(`${_src}/views/components/button/button.ejs`,{size:'lg', variant: 'primary',
              text: '장바구니' }) %>
            </div>
          </div>
        </li>
      </ul>
    </div>
    <!-- e: 가격정보 -->
    <!-- s: 탭 네비게이션 -->
    <nav id="tab-nav" class="tab-nav" aria-label="섹션 탭">
      <button type="button" class="tab-btn is-active" data-target="sec1">상세내용</button>
      <button type="button" class="tab-btn" data-target="sec2">제원정보 및 고시정보</button>
      <button type="button" class="tab-btn" data-target="sec3">관련 및 연관상품</button>
      <span id="tab-Bar" class="tab-bar" aria-hidden="true"></span>
    </nav>
    <!-- e: 탭 네비게이션 -->
  </div>
  <!-- s: tab content -->
  <section id="sec1" class="tab-section">
    <!-- <h3 class="section-title">상세내용</h3> -->
    <div class="section-content">
      <!-- 상세이미지 -->
      <div class="vits-img-detail" style="background-color: #000">
        <img src="<%= _public %>/resources/img/mro/renewal/temp/img-product-detail-1.jpg" alt="상품상세이미지" />
        <img src="<%= _public %>/resources/img/mro/renewal/temp/img-product-detail-2.jpg" alt="상품상세이미지" />
        <img src="<%= _public %>/resources/img/mro/renewal/temp/img-product-detail-3.jpg" alt="상품상세이미지" />
        <img src="<%= _public %>/resources/img/mro/renewal/temp/img-product-detail-4.jpg" alt="상품상세이미지" />
      </div>
      <!-- 상품 정보 더보기 -->
      <div class="vits-more-view">
        <!-- prettier-ignore -->
        <%- include(`${_src}/views/components/button/button.ejs`, { size: 'xl', variant: 'outline-tertiary', text: '상품 정보 더보기' , iconRight: true, iconName: 'ic-arrow-down'}) %>
      </div>
    </div>
    <h3 class="section-title">인증서 및 다운로드</h3>
    <div class="section-content">
      <div class="section-content-download">
        <!-- prettier-ignore -->
        <%- include(`${_src}/views/components/button/button.ejs`, { size: 'xs', variant: 'outline-tertiary', text: '물질안전보건자료' , iconLeft: true, iconName: 'ic-download-2' }) %>
        <%- include(`${_src}/views/components/button/button.ejs`, { size: 'xs', variant: 'outline-tertiary', text: '물질안전보건자료2' , iconLeft: true, iconName: 'ic-download-2' }) %>
        <%- include(`${_src}/views/components/button/button.ejs`, { size: 'xs', variant: 'outline-tertiary', text: '인증서 다운로드' , iconLeft: true, iconName: 'ic-download-2' }) %>
        <%- include(`${_src}/views/components/button/button.ejs`, { size: 'xs', variant: 'outline-tertiary', text: '성적서 다운로드' , iconLeft: true, iconName: 'ic-download-2' }) %>
      </div>
    </div>
  </section>

  <section id="sec2" class="tab-section">
    <h3 class="section-title">제원정보 및 고시정보</h3>
    <div class="section-content">
      <!-- s: 스펙영역 -->
      <!-- prettier-ignore -->
      <%
        const specColumns = [
          [
            { label: '전압', value: '12V' },
            { label: '배터리 용량', value: '2.0Ah' },
            { label: '최대 토크', value: '30Nm' },
            { label: '척 사이즈', value: '10mm' },
            { label: '크기', value: '198 X 63 X 188 mm' },
            { label: '정역 회전', value: '가능' },
            { label: '원산지', value: '독일' },
          ],
          [
            { label: '배터리 타입', value: '리튬이온(Li-ion)' },
            { label: '충전 시간', value: '약 60분' },
            { label: '무부하 회전수', value: '0-400 / 0-1,300 rpm' },
            { label: '무게', value: '약 1.0kg (배터리 포함)' },
            { label: 'LED 라이트', value: '있음' },
            { label: '토크 단계', value: '20단계 + 드릴링' },
            { label: '품질보증', value: '2년 (A/S 무상)' },
          ],
        ];
      %>
      <div class="vits-product-spec">
        <% specColumns.forEach((column) => { %>
        <div class="vits-product-spec-col">
          <ul class="vits-spec-list">
            <% column.forEach((item) => { %>
            <li class="vits-spec-item">
              <span class="vits-spec-label"><%= item.label %></span>
              <span class="vits-spec-value"><%= item.value %></span>
            </li>
            <% }) %>
          </ul>
        </div>
        <% }) %>
      </div>
    </div>
    <!-- s: section - 이런 상품은 어때요?-->
    <div class="vits-product-recommend banner-suggest">
      <div class="recommend-title">
        <h2 class="title">이런 상품은 <span class="primary"> 어때요?</span></h2>
      </div>
      <div class="vits-banner-swiper">
        <!-- prettier-ignore -->
        <%- include(`${_src}/views/components/swiper/swiper-type.ejs`, { slides: ['Slide 1', 'Slide 2', 'Slide 3', 'Slide 4', 'Slide 5', 'Slide 6', 'Slide 7', 'Slide 8', 'Slide 9'], 
          swiperType: 'card', 
          desktop: 5, 
          offsetBefore: 0, 
          offsetAfter: 0, 
          showNavs: true, 
          containerClass: 'swiper-container' 
        }) %>
      </div>
    </div>
    <!-- e: section - 이런 상품은 어때요?-->
  </section>

  <section id="sec3" class="tab-section">
    <h3 class="section-title">관련 및 연관상품</h3>
    <div class="section-content"></div>
    <!-- s: section - 다른 고객이 함께 본 상품-->
    <div class="vits-product-recommend banner-related">
      <div class="recommend-title">
        <h2 class="title">다른 고객이 <span class="primary">함께 본 상품</span></h2>
      </div>
      <div class="vits-banner-swiper">
        <!-- prettier-ignore -->
        <%- include(`${_src}/views/components/swiper/swiper-type.ejs`, { slides: ['Slide 1', 'Slide 2', 'Slide 3', 'Slide 4', 'Slide 5', 'Slide 6', 'Slide 7', 'Slide 8', 'Slide 9'], 
          swiperType: 'card', 
          desktop: 6, 
          offsetBefore: 0, 
          offsetAfter: 0, 
          showNavs: true, 
          containerClass: 'swiper-container' 
        }) %>
      </div>
    </div>
    <!-- e: section - 다른 고객이 함께 본 상품-->
  </section>
  <!-- e tab content -->
</div>
