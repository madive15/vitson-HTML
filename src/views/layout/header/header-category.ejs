                    id="<%- _d1LabelId %>"
                    href="<%- getHrefByCode(_d1) %>"
                    class="gnb-category-link"
                    aria-controls="gnb-cat-d2-<%- _d1 %>"
                    aria-expanded="<%= _isD1Active ? 'true' : 'false' %>"
