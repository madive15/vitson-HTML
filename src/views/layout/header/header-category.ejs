              <% lv1.forEach(function (d1) { 
                   var _d1 = getCode(d1);
                   var _d1LabelId = 'gnb-cat-d1-' + _d1 + '-label';
                   var _isD1Active = (_d1 && _d1 === d1Id);
              %>
              <li class="gnb-category-item <%= _isD1Active ? 'is-active' : '' %>" data-d1="<%- _d1 %>">
                <!-- prettier-ignore -->
