<% const _src = srcPath; const _public = publicPath; %>
<!-- prettier-ignore -->

<!DOCTYPE html>
<html lang="ko" class="vm-scope">
  <%- include(`${_src}/views/layout-mo/header/head.ejs`, {meta_title: '일회성 로그인-인증번호 '}) %>
  <body class="vm-scope">
    <!-- S: Skip Navigation -->
    <a href="#skipNav" class="skip-nav">본문 바로가기</a>
    <!-- E: Skip Navigation -->

    <!-- S: vm-wrapper -->
    <section class="vm-wrapper">
      <!-- S: vm-wrap -->
      <div class="vm-wrap wrap-auth-login">
        <!-- S: vm-content-wrap -->
        <div class="vm-content-wrap">
          <!-- prettier-ignore -->
          <%- include(`${_src}/views/layout-mo/header/index.ejs`, { 
            type: 'nav-bar', title: '일회성 로그인' 
          }) %>

          <!-- S: vm-main -->
          <main id="skipNav" class="vm-main">
            <div class="vm-main-content main-content-auth-login">
              <section class="vm-login-content">
                <!-- 로고 / 타이틀 -->
                <h2 class="vm-login-logo">
                  <img src="<%= _public %>/resources/img/mro/renewal/logo/logo-header.svg" alt="비츠온엠알오 로고" />
                </h2>

                <form class="vm-login-form" action="" method="post">
                  <div class="vm-login-form-fields" id="login-once-code">
                    <!-- prettier-ignore -->
                    <%- include(`${_src}/views/components/form/input-text.ejs`, { id: 'login-code', name: 'loginCode', label: '6자리 인증코드', placeholder: '6자리 인증코드', required: true, rootClass: 'size-large'}) %>

                    <div class="login-once-time-attack">
                      <dl class="time-attack-info">
                        <dt class="time-attack-label">유효시간</dt>
                        <dd class="time-attack-value">00분 00초</dd>
                      </dl>

                      <!-- prettier-ignore -->
                      <%- include(`${_src}/views/components/button/button.ejs`, { text: '인증코드 재전송', size: 'md', variant: 'outline-secondary', type: 'submit', className: 'time-attack-btn'}) %>
                    </div>
                  </div>

                  <!-- 로그인 버튼 -->
                  <!-- prettier-ignore -->
                  <%- include(`${_src}/views/components/button/button.ejs`, { text: '로그인', size: 'xl', variant: 'primary', type: 'submit', className: 'login-submit'}) %>

                  <!-- 일회성 로그인 -->
                  <div class="login-once-others">
                    <!-- prettier-ignore -->
                    <%- include(`${_src}/views/components/button/text-link.ejs`, { href: '#!', label: '일반 로그인 돌아가기', target: '_blank' }) %>
                  </div>
                </form>
              </section>
            </div>
          </main>
          <!-- E: vm-main -->

          <%- include(`${_src}/views/layout-mo/footer/index.ejs`) %>
        </div>
        <!-- E: vm-content-wrap -->

        <!-- S: vm-bottom-group -->
        <!-- E: vm-bottom-group -->

        <!-- S: 팝업 영역 -->
        <!-- E: 팝업 영역 -->
      </div>
      <!-- E: vm-wrap -->
    </section>
    <!-- E: vm-wrapper -->

    <%- include(`${_src}/views/layout/footer.links.ejs`) %>
  </body>
</html>
