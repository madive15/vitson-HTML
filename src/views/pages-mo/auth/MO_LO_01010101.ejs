<% const _src = srcPath; const _public = publicPath; %>
<!-- prettier-ignore -->

<!DOCTYPE html>
<html lang="ko" class="vm-scope">
  <%- include(`${_src}/views/layout-mo/header/head.ejs`, {meta_title: '로그인'}) %>
  <body class="vm-scope">
    <!-- S: Skip Navigation -->
    <a href="#skipNav" class="skip-nav">본문 바로가기</a>
    <!-- E: Skip Navigation -->

    <!-- S: vm-wrapper -->
    <section class="vm-wrapper">
      <!-- S: vm-wrap -->
      <div class="vm-wrap wrap-auth-login">
        <!-- S: vm-content-wrap -->
        <div class="vm-content-wrap">
          <!-- prettier-ignore -->
          <%- include(`${_src}/views/layout-mo/header/index.ejs`, { 
            type: 'nav-bar', title: '로그인' 
          }) %>

          <!-- S: vm-main -->
          <main id="skipNav" class="vm-main">
            <div class="vm-main-content main-content-auth-login">
              <section class="vm-login-content">
                <!-- 로고 / 타이틀 -->
                <h2 class="vm-login-logo">
                  <img src="<%= _public %>/resources/img/mro/renewal/logo/logo-header.svg" alt="비츠온엠알오 로고" />
                </h2>

                <form class="vm-login-form" action="" method="post">
                  <div class="vm-login-form-fields">
                    <!-- prettier-ignore -->
                    <%- include(`${_src}/views/components/form/input-text.ejs`, {id: 'login-id', name: 'loginId', label: '아이디', placeholder: '아이디', required: true, rootClass: 'size-large'}) %>
                    <!-- prettier-ignore -->
                    <%- include(`${_src}/views/components/form/input-text.ejs`, {id: 'login-password', name: 'loginPassword', label: '비밀번호', placeholder: '비밀번호', required: true, rootClass: 'size-large', type: 'password', showPasswordToggle: true}) %>
                  </div>

                  <!-- 아이디 저장 -->
                  <div class="vm-login-options">
                    <div class="login-checkbox">
                      <!-- prettier-ignore -->
                      <%- include(`${_src}/views/components/form/checkbox-item.ejs`, { name: 'saveId', value: 'saveId', size: 'm', text: '아이디 저장'}) %>
                      <!-- prettier-ignore -->
                      <%- include(`${_src}/views/components/form/checkbox-item.ejs`, { name: 'autoLogin', value: 'autoLogin', size: 'm', text: '자동 로그인'}) %>
                    </div>
                  </div>

                  <!-- 로그인 버튼 -->
                  <!-- prettier-ignore -->
                  <%- include(`${_src}/views/components/button/button.ejs`, { text: '로그인', size: 'xl', variant: 'primary', type: 'submit', className: 'login-submit'}) %>

                  <!-- 일회성 로그인 -->
                  <div class="login-once-others">
                    <!-- prettier-ignore -->
                    <%- include(`${_src}/views/components/button/text-link.ejs`, { href: '#!', label: '일회성 로그인', target: '_blank' }) %>
                  </div>

                  <!-- 하단 링크 -->
                  <!-- prettier-ignore -->
                  <%- include(`${_src}/views/components/pg-auth/login-links.ejs`, 
                  { links: [
                    { href: '#!', label: '아이디 찾기' }, 
                    { href: '#!', label: '비밀번호 찾기' }, 
                    { href: '#!', label: '회원가입' }
                  ]}) %>
                </form>
              </section>
            </div>
          </main>
          <!-- E: vm-main -->

          <%- include(`${_src}/views/layout-mo/footer/index.ejs`) %>
        </div>
        <!-- E: vm-content-wrap -->

        <!-- S: vm-bottom-group -->
        <!-- E: vm-bottom-group -->

        <!-- S: 팝업 영역 -->
        <!-- E: 팝업 영역 -->
      </div>
      <!-- E: vm-wrap -->
    </section>
    <!-- E: vm-wrapper -->

    <%- include(`${_src}/views/layout/footer.links.ejs`) %>
  </body>
</html>
