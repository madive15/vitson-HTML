<% const _src = srcPath; const _public = publicPath; %>
<!-- prettier-ignore -->

<!DOCTYPE html>
<html lang="ko" class="vm-scope">
  <%- include(`${_src}/views/layout-mo/header/head.ejs`, {meta_title: '대량구매문의-상세'}) %>
  <body class="vm-scope">
    <!-- S: Skip Navigation -->
    <a href="#skipNav" class="skip-nav">본문 바로가기</a>
    <!-- E: Skip Navigation -->

    <!-- S: vm-wrapper -->
    <section class="vm-wrapper">
      <!-- S: vm-wrap -->
      <div class="vm-wrap wrap-my-inquiry">
        <!-- S: vm-content-wrap -->
        <div class="vm-content-wrap">
          <!-- prettier-ignore -->
          <%- include(`${_src}/views/layout-mo/header/index.ejs`, { 
            type: 'nav-bar', title: '대량 구매 문의' 
          }) %>

          <!-- S: vm-main -->
          <main id="skipNav" class="vm-main">
            <div class="vm-main-content main-content-my-inquiry">
              <div class="vm-mypage-inquiry inquiry-detail">
                <%# 상품 %>
                <div class="inquiry-detail-product">
                  <!-- prettier-ignore -->
                  <%- include(`${_src}/views/components-mo/mypage/inquiry-bulk-product-item.ejs`, {
                    className:'product-outlined'
                  }) %>
                </div>

                <div class="vm-mypage-inquiry-detail">
                  <div class="inquiry-detail-post">
                    <div class="detail-post-head">
                      <div class="detail-post-meta">
                        <!-- 
                          [D] 답변대기 : 
                            include(`${_src}/views/components/label/general-label.ejs`, { text: '답변대기', variant: 'gray' }) 
                        -->
                        <%- include(`${_src}/views/components/label/general-label.ejs`, { text: '답변완료', variant:
                        'green' }) %>
                        <span class="text-date">2027-01-01</span>
                      </div>
                      <h3 class="detail-post-title">단가 확인 요청드립니다.</h3>
                    </div>
                    <div class="detail-post-body">
                      <div class="detail-post-content">
                        안녕하세요. 이 제품을 120개 구매 했을 경우,<br />
                        단가 확인 요청드립니다. 감사합니다.
                      </div>
                      <div class="detail-post-info">
                        <p class="post-phone">
                          <span>연락받으실 연락처</span>
                          <span class="text">010-1234-5678</span>
                        </p>

                        <!-- 첨부파일 -->
                        <!-- prettier-ignore -->
                        <%- include(`${_src}/views/components-mo/form/post-attachment.ejs`, { 
                          fileNames: ['01호 인터넷판매불가 안내문.pdf', '첨부파일.jpg']
                        }) %>
                      </div>
                    </div>
                  </div>

                  <!-- 댓글 영역 -->
                  <%- include(`${_src}/views/components-mo/form/post-comment.ejs`) %>
                </div>
              </div>
            </div>
          </main>
          <!-- E: vm-main -->

          <%- include(`${_src}/views/layout-mo/footer/index.ejs`) %>
        </div>
        <!-- E: vm-content-wrap -->

        <!-- S: vm-bottom-group -->
        <!-- prettier-ignore -->
        <%- include(`${_src}/views/layout-mo/bottom-bar/index.ejs`, { 
          type: 'tab-bar', currentTab: 'mypage' 
        }) %>
        <!-- E: vm-bottom-group -->

        <!-- S: 팝업 영역 -->
        <!-- E: 팝업 영역 -->
      </div>
      <!-- E: vm-wrap -->
    </section>
    <!-- E: vm-wrapper -->

    <%- include(`${_src}/views/layout/footer.links.ejs`) %>
  </body>
</html>
